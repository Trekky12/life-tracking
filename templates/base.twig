<!DOCTYPE html>
<html lang="{{i18n.template}}">
    <head>
        <meta charset="utf-8">
        <title>{{lang["PAGE_TITLE"]}}</title>
        <meta name="description" content="Life Tracking"/>
        <meta name="date" content="{{ "now"|date("Y-m-d") }}"/>
        <meta name="robots" content="noindex,nofollow">
        <meta http-equiv="content-language" content="en">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">

        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet"> 
        <link rel="stylesheet" type="text/css" href="/static/assets/css/font-awesome.min.css" />
        <link rel="stylesheet" type="text/css" href="/static/assets/css/normalize.min.css" />
        <link rel="stylesheet" type="text/css" href="/static/assets/css/leaflet.css" />
        <link rel="stylesheet" type="text/css" href="/static/assets/css/jquery-ui.css" />
        <link rel="stylesheet" type="text/css" href="/static/assets/css/jquery.dataTables.min.css" />
        <link rel="stylesheet" type="text/css" href="/static/assets/css/responsive.dataTables.min.css" />
        <link rel="stylesheet" type="text/css" href="/static/style.css?ver=20171124" />

    </head>

    <body>

        <header id="masthead" class="site-header">
            <div class="header-inner">
                {% if not loggedIn is null %}
                    {% include 'modules/navigation.twig' %}
                {% endif %}
            </div>


        </header>

        <div id="content" class="site-content container">
            {% if flash() is not empty %}
                <div class="alert {{flash('message_type')[0]}}">
                    <span class="closebtn" >&times;</span>
                    <span class="alert-message">
                        {% for msg in flash('message') %}
                            <p>{{ msg }}</p>
                        {% endfor %}
                    </span>
                </div>
            {% endif %}
            {% block body %}
            {% endblock %}
        </div>
        {% block bottom %}
        {% endblock %}

        <script src="/static/assets/js/jquery.min.js" type="text/javascript"></script>
        <script src="/static/assets/js/leaflet.js" type="text/javascript"></script>
        <script src="/static/assets/js/jquery-ui.min.js" type="text/javascript"></script>
        <script src="/static/assets/js/i18n/datepicker-{{i18n.template}}.js" type="text/javascript"></script>
        <script src="/static/assets/js/jquery.dataTables.min.js" type="text/javascript"></script>        
        <script src="/static/assets/js/dataTables.responsive.min.js" type="text/javascript"></script>        
        <script src="/static/assets/js/moment-with-locales.min.js" type="text/javascript"></script>  
        <script src="/static/assets/js/Chart.min.js" type="text/javascript"></script>  
        <script src="/static/js/navigation.min.js" type="text/javascript"></script>
        <script src="/static/js/main.min.js" type="text/javascript"></script>


        <script type="text/javascript">
            var jsObject = {
                'marker_url': '{{ path_for("getMarkers") }}',
                'delete_marker_url': '{{ path_for("delete_marker") }}',
                'get_address_url': '{{ path_for("get_address") }}',
                'datatable': '{{path_for('datatable_lang')}}',
                'finances_table': "{{path_for("finances_table")}}",
                'fuel_table': "{{path_for("fuel_table")}}",
                'datacount' : '{{datacount}}'
            };
            var default_location = {'lat': '{{location.lat}}', 'lng': '{{location.lng}}', 'zoom': '{{location.zoom}}'};
            var i18n = {{i18n|json_encode()|raw}};
            var lang = {"really_delete": '{{lang["REALLY_DELETE"]}}', 'address': '{{lang["ADDRESS"]}}', 'delete_text': '{{lang["DELETE"]}}', 'accuracy': '{{lang["ACCURACY"]}}', 'consumption': '{{lang["CONSUMPTION"]}}'};

        </script>
        {% block javascript %}
        {% endblock %}
    </body>
</html>