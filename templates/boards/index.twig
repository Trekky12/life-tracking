{% extends "base.twig" %}

{% set active = 'boards' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["BOARDS"]}}</h2></div>
        <div class="page-content">
            <table id="boards_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["NAME"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for board in boards %}
                        <tr>
                            <td data-title="{{lang["NAME"]}}">{{board.name}}</td> 
                            <td><a href="{{  path_for('boards_edit', {'id' : board.id}) }}"><span class="fa fa-pencil-square-o fa-lg"></span></a></td>
                            <td><a href="#" data-url="{{  path_for('boards_delete', {'id' : board.id}) }}" class="btn-delete"><span class="fa fa-trash fa-lg"></span></a>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}