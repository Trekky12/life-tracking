{% extends "base.twig" %}

{% set active = 'car_service' %}

{% block javascript %}
	<script src="{{baseURL}}/static/assets/js/autoComplete.min.js?ver={{CACHEMISS}}"></script>
	<script src="{{baseURL}}/static/js/user-select.js?ver={{CACHEMISS}}"></script>
{% endblock %}

{% block style %}
	<link rel="stylesheet" type="text/css" href="{{baseURL}}/static/assets/css/autoComplete.min.css?ver={{CACHEMISS}}"/>
{% endblock %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('cars') }}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"CARS"|trans}}</h2>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">

			<form class="form-horizontal" action="{{ url_for('cars_save', {'id' : entry.id}) }}" method="POST">
				<input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
				<input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

				{% if not entry is null %}
					<input name="id" id="entry_id" type="hidden" value="{{entry.id}}">
					<input name="hash" type="hidden" value="{{entry.hash}}">
				{% endif %}


				<div class="form-group">
					<label for="inputName">{{"NAME"|trans}}</label>
					<input type="text" class="form-control" id="inputName" name="name" {% if not entry is null %} value="{{entry.name|raw}}" {% endif %}>
				</div>

				<div class="form-group">
					{% include "main/user-select.twig" with {'entry':entry, 'module': 'cars'} only %}
				</div>

				<h3>{{"STATS"|trans}}</h3>
				<div class="form-group">
					<label for="inputMileageYear">{{"MILEAGE_PER_YEAR"|trans}}</label>
					<input type="number" class="form-control" id="inputMileageYear" name="mileage_per_year" step="1" pattern="\d*" placeholder="" {% if not entry is null %} value="{{entry.mileage_per_year}}" {% endif %}>
				</div>

				<div class="form-group">
					<label for="inputTerm">{{"MILEAGE_TERM"|trans}}</label>
					<input type="number" class="form-control" id="inputTerm" name="mileage_term" step="1" pattern="\d*" placeholder="" {% if not entry is null %} value="{{entry.mileage_term}}" {% endif %}>
				</div>

				<div class="form-group">
					<label for="dateSelect">{{"START"|trans}}
						{{"DATE"|trans}}</label>
					<div class="flatpickr-group" id="dateSelect">
						<input type="text" class="form-control" id="dateSelectField" placeholder="" name="mileage_start_date" value="{% if not entry is null %}{{entry.mileage_start_date}}{% else %}{{"now"|date('Y-m-d')}}{% endif %}" data-input/>

						<a class="flatpickr-input-button" title="toggle" data-toggle>
							{{ fontawesome('fas fa-calendar-days') }}
						</a>

						<a class="flatpickr-input-button" title="clear" data-clear>
							{{ fontawesome('fas fa-xmark') }}
						</a>
					</div>
				</div>

				<div class="form-group">
					<label for="inputMileageStart">{{"MILEAGE_START"|trans}}</label>
					<input type="number" class="form-control" id="inputMileageStart" name="mileage_start" step="1" pattern="\d*" placeholder="" value="{% if not entry is null %}{{entry.mileage_start}}{% else %}0{% endif %}">
				</div>

				<div class="form-group">
					<h4>{{"CARS_REFILL_TYPE"|trans}}</h4>
					<label class="checkbox" for="radioRefillTypeFuel">
						<input name="refill_type" type="radio" value="fuel" id="radioRefillTypeFuel" {% if (entry is null) or (entry is not null and entry.refill_type == "fuel" )%} checked="checked" {% endif %}>
						{{"CARS_REFILL_TYPE_FUEL"|trans}}
					</label>
					<br/>
					<label class="checkbox" for="radioRefillTypeBattery">
						<input name="refill_type" type="radio" value="battery" id="radioRefillTypeBattery" {% if (entry is not null and entry.refill_type == "battery" )%} checked="checked" {% endif %}>
						{{"CARS_REFILL_TYPE_BATTERY"|trans}}
					</label>
				</div>

				<div class="form-group">
					<label class="checkbox" for="checkboxArchived">
						<input name="archive" type="checkbox" value="1" id="checkboxArchived" {% if entry is not null and entry.archive == 1 %} checked {% endif %}>
						{{"ARCHIVED"|trans}}
					</label>
				</div>

				<div class="form-group">
					<button type="submit" class="button">
						{% if not entry is null %}
							{{"SAVE"|trans}}
						{% else %}
							{{"INSERT"|trans}}
						{% endif %}
					</button>
					{% if not entry is null %}
						<button id="cancel" class="button button-text">{{"CANCEL"|trans}}</button>
					{% endif %}
				</div>
			</form>
		</div>
	</div>
{% endblock %}
