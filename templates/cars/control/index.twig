{% extends "base.twig" %}

{% set active = 'car_service' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["CARS"]}}</h2>
            <div class="buttons">
                <a href="{{  url_for('cars_edit') }}"><button class="white"><i class="fas fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a>
            </div>
        </div>
        <div class="page-content">
            <table id="cars_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["NAME"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for car in cars %}
                        <tr>
                            <td>{{car.name|raw}}</td> 
                            <td>
                                {% if car.user == user.id %}
                                    <a href="{{  url_for('cars_edit', {'id' : car.id}) }}"><span class="fas fa-edit fa-lg"></span></a>
                                    {% endif %}
                            </td>
                            <td>
                                {% if car.user == user.id %}
                                    <a href="#" data-url="{{  url_for('cars_delete', {'id' : car.id}) }}" class="btn-delete"><span class="fas fa-trash fa-lg"></span></a>
                                    {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}