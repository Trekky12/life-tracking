{% extends "base.twig" %}

{% set active = 'car_service' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["CARS"]}}</h2> {% if user.isAdmin() %}<a href="{{  path_for('cars_edit') }}"><button class="white"><i class="fa fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a>{% endif %}</div>
        <div class="page-content">
            <table id="cars_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["NAME"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for car in cars %}
                        <tr>
                            <td data-title="{{lang["NAME"]}}">{{car.name}}</td> 
                            <td><a href="{{  path_for('cars_edit', {'id' : car.id}) }}"><span class="fa fa-pencil-square-o fa-lg"></span></a></td>
                            <td><a href="#" data-url="{{  path_for('cars_delete', {'id' : car.id}) }}" class="btn-delete"><span class="fa fa-trash fa-lg"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}