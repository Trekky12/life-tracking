{% extends "base.twig" %}

{% set active = 'car_service' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<h2>{{"CARS"|trans}}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('cars_edit') }}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{"ADD"|trans}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="cars_table" class="table table-hover small">
				<thead>
					<tr>
						<th>{{"NAME"|trans}}</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for car in cars %}
						<tr>
							<td><a href="{{ url_for('car_service_refuel', {'car' : car.getHash()}) }}">{{car.name|raw}}</a></td>
							<td>
								{% if car.user == user.id %}
									<a href="{{ url_for('cars_edit', {'id' : car.id}) }}">{{ fontawesome('fas fa-pen-to-square') }}</a>
								{% endif %}
							</td>
							<td>
								{% if car.user == user.id %}
									<a href="#" data-url="{{ url_for('cars_delete', {'id' : car.id}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
