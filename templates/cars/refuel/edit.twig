{% extends "base.twig" %}

{% set active = 'car_service' %}

{% set hasMap = not entry.lat is null and not entry.lng is null %}

{% block style %}
	<link rel="stylesheet" type="text/css" href="{{baseURL}}/static/assets/css/nouislider.min.css?ver={{CACHEMISS}}"/>
{% endblock %}

{% block javascript %}
	<script src="{{baseURL}}/static/assets/js/nouislider.min.js?ver={{CACHEMISS}}"></script>
	<script src="{{baseURL}}/static/js/car-service.js?ver={{CACHEMISS}}"></script>
{% endblock %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('car_service_refuel', {'car': car.getHash()}) }}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"CAR_REFUEL"|trans}} | {{car.name|raw}}</h2>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">

			<form class="form-horizontal" id="gasolineForm" action="{{ url_for('car_service_refuel_save', {'id' : entry.id, 'car': car.getHash()}) }}" method="POST">
				<input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
				<input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

				<input name="type" type="hidden" value="0">
				{% if not entry is null %}
					{# Hidden fields for ID to recognize updates and for not available fields so they don't get overwritten with null #}
					<input name="id" id="entry_id" type="hidden" value="{{entry.id}}">
					<input name="refill_distance" type="hidden" value="{{entry.refill_distance}}">
					<input name="refill_consumption" type="hidden" value="{{entry.refill_consumption}}">
				{% endif %}

				<div class="form-group">
					<label for="dateSelect">{{"DATE"|trans}}</label>
					<div class="flatpickr-group" id="dateSelect">
						<input type="text" class="form-control" id="dateSelectField" placeholder="" name="date" value="{% if not entry is null %}{{entry.date}}{% else %}{{"now"|date('Y-m-d')}}{% endif %}" data-input/>

						<a class="flatpickr-input-button" title="toggle" data-toggle>
							{{ fontawesome('fas fa-calendar-days') }}
						</a>

						<a class="flatpickr-input-button" title="clear" data-clear>
							{{ fontawesome('fas fa-xmark') }}
						</a>
					</div>
				</div>
				<div class="form-group">
					<label for="inputGMileage">{{"MILEAGE"|trans}}</label>
					<input type="number" class="form-control" id="inputGMileage" name="mileage" step="any" pattern="\d*" placeholder="" {% if not entry is null %} value="{{entry.mileage}}" {% endif %}>
				</div>

				<div id="carServiceFuel">
					<div class="form-group two-columns">
						<div class="left">
							<label class="radio" for="radioPart">
								<input name="refill_full" type="radio" data-toggle="radio" value="0" id="radioPart" {% if entry is null or (not entry is null and entry.refill_full == 0) %} checked {% endif %}>
								{{"FUEL_PARTLY"|trans}}
							</label>
						</div>
						<div class="right">
							<label class="radio" for="radioFull">
								<input name="refill_full" type="radio" data-toggle="radio" value="1" id="radioFull" {% if not entry is null and entry.refill_full == 1 %} checked {% endif %}>
								{{"FUEL_FULL"|trans}}
							</label>
						</div>
					</div>
					<div class="form-group">
						<label class="checkbox" for="checkboxCalcConsumption">
							<input name="calc_refill_consumption" type="checkbox" id="checkboxCalcConsumption" value="1" {% if entry is null or entry.calc_refill_consumption == 1 %} checked {% endif %}>
							{{"CALC_CONSUMPTION"|trans}}
						</label>
					</div>
					<div class="form-group">
						<label for="inputGPrice">{{"PRICE"|trans}}/{% if car.refill_type == "fuel" %}l{% else %}kWh{% endif %}</label>
						<input type="number" class="form-control" id="inputGPrice" name="refill_price" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.refill_price}}" {% endif %}>
					</div>
					<div class="form-group">
						<label for="inputGVol">{{"VOLUME"|trans}} ({% if car.refill_type == "fuel" %}l{% else %}kWh{% endif %})</label>
						<input type="number" class="form-control" id="inputGVol" name="refill_amount" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.refill_amount}}" {% endif %}>
					</div>
					<div class="form-group">
						<label for="inputGTotalPrice">{{"TOTAL_PRICE"|trans}}</label>
						<input type="number" class="form-control" id="inputGTotalPrice" name="refill_total_price" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.refill_total_price}}" {% endif %}>
					</div>
					<div class="form-group">
						<label for="inputGLocation">{{"LOCATION"|trans}}</label>
						<input type="text" class="form-control" id="inputGLocation" name="refill_location" placeholder="" {% if not entry is null %} value="{{entry.refill_location|raw}}" {% endif %}>
					</div>
				</div>

				<div class="form-group">
					<label for="inputGNotice">{{"NOTICE"|trans}}</label>
					<textarea class="form-control" id="inputGNotice" name="notice">
						{%- if not entry is null -%}
							{{- entry.notice|raw -}}
						{%- endif -%}
					</textarea>
				</div>

				<div class="mapWrapper">
					{% if not entry is null %}
						<h3>{{"LOCATION"|trans}}</h3>
						<div id="geo-map" class="geo-map"></div>
						<div class="form-group map-btn">
							<button id="update-location" class="update-location button button-outlined">{{"SET_CURRENT_LOCATION"|trans}}</button>
							<button id="delete-location" class="delete-location button button-text {% if not hasMap %}hidden{% endif %}">{{"REMOVE_LOCATION"|trans}}</button>
						</div>
					{% endif %}
					<input type="hidden" id="geoLat" class="geo-lat" name="lat" value="{% if not entry is null %}{{entry.lat}}{% endif %}">
					<input type="hidden" id="geoLng" class="geo-lng" name="lng" value="{% if not entry is null %}{{entry.lng}}{% endif %}">
					<input type="hidden" id="geoAcc" class="geo-acc" name="acc" value="{% if not entry is null %}{{entry.acc}}{% endif %}">
				</div>


				<div class="form-group">
					<button type="submit" class="button">
						{% if not entry is null %}
							{{"SAVE"|trans}}
						{% else %}
							{{"INSERT"|trans}}
						{% endif %}
					</button>
					{% if not entry is null %}
						<button id="cancel" class="button button-text">{{"CANCEL"|trans}}</button>
					{% endif %}
				</div>
			</form>
		</div>
	</div>
{% endblock %}
