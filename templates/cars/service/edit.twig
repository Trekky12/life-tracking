{% extends "base.twig" %}

{% set active = 'car_service' %}

{% set hasMap = not entry.lat is null and not entry.lng is null %}

{% block style %}
	<link rel="stylesheet" type="text/css" href="{{baseURL}}/static/assets/css/nouislider.min.css?ver={{CACHEMISS}}"/>
{% endblock %}

{% block javascript %}
	<script src="{{baseURL}}/static/assets/js/nouislider.min.js?ver={{CACHEMISS}}"></script>
	<script src="{{baseURL}}/static/js/car-service.js?ver={{CACHEMISS}}"></script>
{% endblock %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('car_service') }}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"CAR_SERVICE"|trans}}</h2>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">

			<form class="form-horizontal" id="gasolineForm" action="{{ url_for('car_service_save', {'id' : entry.id}) }}" method="POST">
				<input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
				<input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

				<input name="type" type="hidden" value="1">
				{% if not entry is null %}
					{# Hidden fields for ID to recognize updates and for not available fields so they don't get overwritten with null #}
					<input name="id" id="entry_id" type="hidden" value="{{entry.id}}">
					<input name="fuel_distance" type="hidden" value="{{entry.fuel_distance}}">
					<input name="fuel_consumption" type="hidden" value="{{entry.fuel_consumption}}">
				{% endif %}

				<div class="form-group">
					<label for="car">{{"CAR"|trans}}</label>
					<div class="select-wrapper form-control">
						<select id="car" name="car">
							{% for car in cars %}
								{% if car.id in user_cars %}
									<option value="{{car.id}}" {% if (not entry is null and car.id == entry.car) %} selected {% endif %}>{{car.name|raw}}</option>
								{% endif %}
							{% endfor %}
						</select>
					</div>
				</div>


				<div class="form-group">
					<label for="dateSelect">{{"DATE"|trans}}</label>
					<div class="flatpickr-group" id="dateSelect">
						<input type="text" class="form-control" id="dateSelectField" placeholder="" name="date" value="{% if not entry is null %}{{entry.date}}{% else %}{{"now"|date('Y-m-d')}}{% endif %}" data-input/>

						<a class="flatpickr-input-button" title="toggle" data-toggle>
							{{ fontawesome('fas fa-calendar-days') }}
						</a>

						<a class="flatpickr-input-button" title="clear" data-clear>
							{{ fontawesome('fas fa-xmark') }}
						</a>
					</div>
				</div>
				<div class="form-group">
					<label for="inputGMileage">{{"MILEAGE"|trans}}</label>
					<input type="number" class="form-control" id="inputGMileage" name="mileage" step="any" pattern="\d*" placeholder="" {% if not entry is null %} value="{{entry.mileage}}" {% endif %}>
				</div>

				<div id="carServiceService">
					<h4>{{"CAR_SERVICE_OIL"|trans}}</h4>
					<div class="form-group two-columns">
						<div class="left">
							<div class="form-group">
								<h4>{{"BEFORE"|trans}}</h4>
								<div class="slider-wrapper">
									<input type="hidden" class="slider-value form-control" name="service_oil_before" {% if not entry is null %} value="{{entry.service_oil_before}}" {% endif %}>
									<div class="slider" data-min="0" data-max="100" data-level="{% if not entry is null %}{{entry.service_oil_before}}{% else %}0{% endif %}"></div>
								</div>
							</div>
						</div>
						<div class="right">
							<div class="form-group">
								<h4>{{"AFTER"|trans}}</h4>
								<div class="slider-wrapper">
									<input type="hidden" class="slider-value form-control" name="service_oil_after" {% if not entry is null %} value="{{entry.service_oil_after}}" {% endif %}>
									<div class="slider" data-min="0" data-max="100" data-level="{% if not entry is null %}{{entry.service_oil_after}}{% else %}0{% endif %}"></div>
								</div>
							</div>
						</div>
					</div>
					<h4>{{"CAR_SERVICE_WATER_WIPER"|trans}}</h4>
					<div class="form-group two-columns">
						<div class="left">
							<h4>{{"BEFORE"|trans}}</h4>
							<div class="slider-wrapper">
								<input type="hidden" class="slider-value form-control" name="service_water_wiper_before" {% if not entry is null %} value="{{entry.service_water_wiper_before}}" {% endif %}>
								<div class="slider" data-min="0" data-max="100" data-level="{% if not entry is null %}{{entry.service_water_wiper_before}}{% else %}0{% endif %}"></div>
							</div>
						</div>
						<div class="right">
							<div class="form-group">
								<h4>{{"AFTER"|trans}}</h4>
								<div class="slider-wrapper">
									<input type="hidden" class="slider-value form-control" name="service_water_wiper_after" {% if not entry is null %} value="{{entry.service_water_wiper_after}}" {% endif %}>
									<div class="slider" data-min="0" data-max="100" data-level="{% if not entry is null %}{{entry.service_water_wiper_after}}{% else %}0{% endif %}"></div>
								</div>
							</div>
						</div>
					</div>
					<h4>{{"CAR_SERVICE_AIR"|trans}}</h4>
					<div class="form-group two-columns">
						<div class="left">
							<h4>{{"BEFORE"|trans}}</h4>
							<div class="form-group">
								<div class="two-columns">
									<div class="left">
										<label for="inputServiceAirFrontLeftBefore">{{"CAR_FRONT"|trans}}
											{{"LEFT"|trans}}</label>
										<input type="number" class="form-control" id="inputServiceAirFrontLeftBefore" name="service_air_front_left_before" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.service_air_front_left_before}}" {% endif %}>
										<label for="inputServiceAirBackLeftBefore">{{"CAR_BACK"|trans}}
											{{"LEFT"|trans}}</label>
										<input type="number" class="form-control" id="inputServiceAirBackLeftBefore" name="service_air_back_left_before" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.service_air_back_left_before}}" {% endif %}>
									</div>
									<div class="right">
										<label for="inputServiceAirFrontRightBefore">{{"CAR_FRONT"|trans}}
											{{"RIGHT"|trans}}</label>
										<input type="number" class="form-control" id="inputServiceAirFrontRightBefore" name="service_air_front_right_before" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.service_air_front_right_before}}" {% endif %}>
										<label for="inputServiceAirBackRightBefore">{{"CAR_BACK"|trans}}
											{{"RIGHT"|trans}}</label>
										<input type="number" class="form-control" id="inputServiceAirBackRightBefore" name="service_air_back_right_before" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.service_air_back_right_before}}" {% endif %}>
									</div>
								</div>
							</div>
						</div>
						<div class="right">
							<h4>{{"AFTER"|trans}}</h4>
							<div class="form-group">
								<div class="two-columns">
									<div class="left">
										<label for="inputServiceAirFrontLeftAfter">{{"CAR_FRONT"|trans}}
											{{"LEFT"|trans}}</label>
										<input type="number" class="form-control" id="inputServiceAirFrontLeftAfter" name="service_air_front_left_after" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.service_air_front_left_after}}" {% endif %}>
										<label for="inputServiceAirBackLeftAfter">{{"CAR_BACK"|trans}}
											{{"LEFT"|trans}}</label>
										<input type="number" class="form-control" id="inputServiceAirBackLeftAfter" name="service_air_back_left_after" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.service_air_back_left_after}}" {% endif %}>
									</div>
									<div class="right">
										<label for="inputServiceAirFrontRightAfter">{{"CAR_FRONT"|trans}}
											{{"RIGHT"|trans}}</label>
										<input type="number" class="form-control" id="inputServiceAirFrontRightAfter" name="service_air_front_right_after" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.service_air_front_right_after}}" {% endif %}>
										<label for="inputServiceAirBackRightAfter">{{"CAR_BACK"|trans}}
											{{"RIGHT"|trans}}</label>
										<input type="number" class="form-control" id="inputServiceAirBackRightAfter" name="service_air_back_right_after" step="any" inputmode="decimal" placeholder="" {% if not entry is null %} value="{{entry.service_air_back_right_after}}" {% endif %}>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label class="checkbox" for="checkboxTireChange">
							<input name="service_tire_change" type="checkbox" id="checkboxTireChange" value="1" {% if not entry is null and entry.service_tire_change == 1 %} checked {% endif %}>
							{{"CAR_SERVICE_TIRE_CHANGE"|trans}}
						</label>
					</div>
					<div class="form-group">
						<label class="checkbox" for="checkboxGarage">
							<input name="service_garage" type="checkbox" id="checkboxGarage" value="1" {% if not entry is null and entry.service_garage == 1 %} checked {% endif %}>
							{{"CAR_SERVICE_GARAGE"|trans}}
						</label>
					</div>
				</div>

				<div class="form-group">
					<label for="inputGNotice">{{"NOTICE"|trans}}</label>
					<textarea class="form-control" id="inputGNotice" name="notice">
						{%- if not entry is null -%}
							{{- entry.notice|raw -}}
						{%- endif -%}
					</textarea>
				</div>

				<div class="mapWrapper">
					{% if not entry is null %}
						<h3>{{"LOCATION"|trans}}</h3>
						<div id="geo-map" class="geo-map"></div>
						<div class="form-group map-btn">
							<button id="update-location" class="update-location button button-outlined">{{"SET_CURRENT_LOCATION"|trans}}</button>
							<button id="delete-location" class="delete-location button button-text {% if not hasMap %}hidden{% endif %}">{{"REMOVE_LOCATION"|trans}}</button>
						</div>
					{% endif %}
					<input type="hidden" id="geoLat" class="geo-lat" name="lat" value="{% if not entry is null %}{{entry.lat}}{% endif %}">
					<input type="hidden" id="geoLng" class="geo-lng" name="lng" value="{% if not entry is null %}{{entry.lng}}{% endif %}">
					<input type="hidden" id="geoAcc" class="geo-acc" name="acc" value="{% if not entry is null %}{{entry.acc}}{% endif %}">
				</div>


				<div class="form-group">
					<button type="submit" class="button">
						{% if not entry is null %}
							{{"SAVE"|trans}}
						{% else %}
							{{"INSERT"|trans}}
						{% endif %}
					</button>
					{% if not entry is null %}
						<button id="cancel" class="button button-text">{{"CANCEL"|trans}}</button>
					{% endif %}
				</div>
			</form>
		</div>
	</div>
{% endblock %}
