{% extends "base.twig" %}

{% set active = 'car_service' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('cars')}}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"CAR_SERVICE"|trans}}
				|
				{{car.name|raw}}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('car_service_edit', {'car': car.getHash()}) }}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{"ADD"|trans}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block tabbar %}
	{% include "cars/cars-tabs.twig" with {'active':'car_service', 'hash': car.getHash()} only %}
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="service_table" class="table table-hover small">
				<thead>
					<tr>
						<th>{{"DATE"|trans}}</th>
						<th>{{"MILEAGE"|trans}}</th>
						<th>{{"CAR_SERVICE_OIL"|trans}}</th>
						<th>{{"CAR_SERVICE_WATER_WIPER"|trans}}</th>
						<th>{{"CAR_SERVICE_AIR"|trans}}</th>
						<th>{{"CAR_SERVICE_TIRE_CHANGE"|trans}}</th>
						<th>{{"CAR_SERVICE_GARAGE"|trans}}</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for entry in service_table %}
						<tr>
							<td>{{entry[0]}}</td>
							<td>{{entry[1]}}</td>
							<td>{{entry[2]}}</td>
							<td>{{entry[3]}}</td>
							<td>{{entry[4]}}</td>
							<td>{{entry[5]}}</td>
							<td>{{entry[6]}}</td>
							<td>{{entry[7]|raw}}</td>
							<td>{{entry[8]|raw}}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
