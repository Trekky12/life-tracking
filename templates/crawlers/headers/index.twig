{% extends "base.twig" %}

{% set active = 'crawlers' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["CRAWLERS"]}} {{lang["HEADLINES"]}} | {{ crawler.name }}</h2> 
            <div class="buttons">
                <a href="{{  url_for_with_last_query_params('crawlers') }}"><button class="button white">{{lang["BACK"]}} {{ fontawesome('fas fa-level-up-alt') }}</button></a>            
                <a href="{{  url_for('crawlers_headers_clone', {'crawler': crawler.hash}) }}"><button class="button white">{{ fontawesome('fas fa-clone') }} {{lang["CLONE"]}}</button></a>
                <a href="{{  url_for('crawlers_headers_edit', {'crawler': crawler.hash}) }}"><button class="button white">{{ fontawesome('fas fa-plus') }} {{lang["ADD"]}}</button></a>
            </div>
        </div>
        <div class="page-content">
            <table id="crawlers_headers_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["HEADLINE"]}}</th>
                        <th>{{lang["FIELD_NAME"]}}</th>
                        <th>{{lang["FIELD_LINK"]}}</th>
                        <th>{{lang["FIELD_CONTENT"]}}</th>
                        <th>{{lang["POSITION"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for header in headers %}
                        <tr>
                            <td>{{header.headline|raw}}</td> 
                            <td>{{header.field_name}}</td> 
                            <td>{{header.field_link}}</td> 
                            <td>{{header.field_content|raw}}</td> 
                            <td>{{header.position}}</td> 
                            <td>
                                {% if crawler.user == user.id %}
                                    <a href="{{  url_for('crawlers_headers_edit', {'id' : header.id, 'crawler' : crawler.hash}) }}">{{ fontawesome('fas fa-edit') }}</a>
                                {% endif %}
                            </td>
                            <td>
                                {% if crawler.user == user.id %}
                                    <a href="#" data-url="{{  url_for('crawlers_headers_delete', {'id' : header.id, 'crawler' : crawler.hash}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}