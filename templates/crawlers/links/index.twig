{% extends "base.twig" %}

{% set active = 'crawlers' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["CRAWLERS"]}} {{lang["LINKLIST"]}} ({{ crawler.name }})</h2> <a href="{{  path_for('crawlers_links_edit', {'crawler': crawler.hash}) }}"><button class="white"><i class="fas fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a></div>
        <div class="page-content">
            <table id="crawlers_links_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["NAME"]}}</th>
                        <th>{{lang["LINK"]}}</th>
                        <th>{{lang["PARENT_LINK"]}}</th>
                        <th>{{lang["POSITION"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for link in links %}
                        <tr>
                            <td data-title="{{lang["NAME"]}}">{{link.name|raw}}</td> 
                            <td data-title="{{lang["LINK"]}}">{{link.link}}</td> 
                            <td data-title="{{lang["PARENT_LINK"]}}">{{links[link.parent].name}}</td> 
                            <td data-title="{{lang["POSITION"]}}">{{link.position}}</td> 
                            <td>
                                {% if crawler.user == user.id %}
                                    <a href="{{  path_for('crawlers_links_edit', {'id' : link.id, 'crawler' : crawler.hash}) }}"><span class="fas fa-edit fa-lg"></span></a>
                                {% endif %}
                            </td>
                            <td>
                                {% if crawler.user == user.id %}
                                    <a href="#" data-url="{{  path_for('crawlers_links_delete', {'id' : link.id, 'crawler' : crawler.hash}) }}" class="btn-delete"><span class="fas fa-trash fa-lg"></span></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}