{% extends "base.twig" %}

{% set active = 'error' %}


{% block javascript %}
{% endblock %}



{% block body %}

    <div class="alert {{message_type}}">
        <span class="closebtn" >&times;</span>
        <span class="alert-message">
            <p>{{message}}</p>
        </span>
    </div>

    {% if data is not null %}
        {% if data is iterable %}
            <div class="inner-content">
                <div class="page-content">
                    {% for field_name, field_value in data %}
                        <p>{{ field_name }}: {% if field_value is iterable %}{{field_value|json_encode()}}{% else %}{{ field_value }}{% endif %}</p>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    {% else %}
        <div class="inner-content">
            <div class="page-content">
                {{lang["ERROR"]}}
            </div>
        </div>
    {% endif %}

{% endblock %}