{% extends "base.twig" %}

{% set active = 'finances' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["FINANCES_CATEGORY_ASSIGNMENTS"]}}</h2> <a href="{{  url_for('finances_categories_assignment_edit') }}"><button class="white"><i class="fas fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a></div>
        <div class="page-content">
            
            <table id="category_assignment_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["DESCRIPTION"]}}</th>
                        <th>{{lang["CATEGORY"]}}</th>
                        <th>{{lang["MIN_VALUE"]}}</th>
                        <th>{{lang["MAX_VALUE"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for assignment in assignments %}
                        <tr>
                            <td>{{assignment.description|raw}}</td> 
                            <td>{{categories[assignment.category].name|raw}}</td> 
                            <td>{{assignment.min_value}}</td> 
                            <td>{{assignment.max_value}}</td> 
                            <td><a href="{{  url_for('finances_categories_assignment_edit', {'id' : assignment.id}) }}"><span class="fas fa-edit fa-lg"></span></a></td>
                            <td><a href="#" data-url="{{  url_for('finances_categories_assignment_delete', {'id' : assignment.id}) }}" class="btn-delete"><span class="fas fa-trash fa-lg"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}