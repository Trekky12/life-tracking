{% extends "base.twig" %}

{% set active = 'finances' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["BUDGET"]}}</h2> <a href="{{  path_for('finances_budgets_edit') }}"><button class="white"><i class="fa fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a></div>
        <div class="page-content">
            <table id="category_assignment_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["DESCRIPTION"]}}</th>
                        <th>{{lang["CATEGORY"]}}</th>
                        <th>{{lang["VALUE"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for budget in budgets %}
                        <tr>
                            <td data-title="{{lang["DESCRIPTION"]}}">{{budget.description}}</td> 
                            <td data-title="{{lang["DESCRIPTION"]}}">{{categories[budget.category].name}}</td> 
                            <td data-title="{{lang["VALUE"]}}">{{budget.value}}</td> 
                            <td><a href="{{  path_for('finances_budgets_edit', {'id' : budget.id}) }}"><span class="fa fa-pencil-square-o fa-lg"></span></a></td>
                            <td><a href="#" data-url="{{  path_for('finances_budgets_delete', {'id' : budget.id}) }}" class="btn-delete"><span class="fa fa-trash fa-lg"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}