{% extends "base.twig" %}

{% set active = 'finances' %}


{% block body %}
    <div class="inner-content">
        <div class="page-header"><h2>{{lang["FINANCES_CATEGORIES"]}}</h2></div>
        <div class="page-content">

            <form class="form-horizontal" id="financeForm" action="{{  path_for('finances_categories_save', {'id' : entry.id}) }}" method="POST">
                {% if not entry is null %}
                    <input name="id" id="entry_id"  type="hidden" value="{{entry.id}}">
                {% endif %}

                
                <div class="form-group">
                    <label for="inputName">{{lang["NAME"]}}</label>
                    <input type="text" class="form-control" id="inputName" name="name" {% if not entry is null %}value="{{entry.name|raw}}"{% endif %}>
                </div>
                
                <div class="form-group">
                    <label class="checkbox" for="checkboxDefault">
                        <input name="set_default" type="checkbox" id="checkboxDefault" {% if entry is not null and entry.is_default == 1 %}checked{% endif %}>
                        {{lang["DEFAULT"]}}
                    </label>
                </div>

                <div class="form-group">
                    <button type="submit">{% if not entry is null %}{{lang["SAVE"]}}{% else %}{{lang["INSERT"]}}{% endif %}</button>
                    {% if not entry is null %}
                        <button id="cancel" class="danger">{{lang["CANCEL"]}}</button>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
{% endblock %}