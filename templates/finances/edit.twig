{% extends "base.twig" %}

{% set active = 'finances' %}


{% block body %}
    <div class="inner-content">
        <div class="page-header"><h2>{{lang["MENU_FINANCES"]}}</h2></div>
        <div class="page-content">

            <form class="form-horizontal" id="financeForm" action="{{  path_for('finances_save', {'id' : entry.id}) }}" method="POST">
                {% if not entry is null %}
                    <input name="id" id="entry_id"  type="hidden" value="{{entry.id}}">
                {% endif %}

                <div class="form-group two-columns">
                    <div class="left">
                        <label class="radio" for="radioSpending">
                            <input name="type" type="radio" data-toggle="radio" value="0" id="radioSpending" {% if entry is null or (not entry is null and entry.type == 0) %}checked{% endif %}>
                            {{lang["FINANCES_SPENDING"]}}
                        </label>                               
                    </div>
                    <div class="right">
                        <label class="radio" for="radioIncome">
                            <input name="type" type="radio" data-toggle="radio" value="1" id="radioIncome" {% if not entry is null and entry.type == 1 %}checked{% endif %}>
                            {{lang["FINANCES_INCOME"]}}
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="category">{{lang["CATEGORY"]}}</label>
                    <select class="form-control" id="category" name="category">
                        {% for cat in categories %}
                            <option value="{{cat.id}}" {% if (not entry is null and cat.id == entry.category) or (entry is null and cat.is_default == 1) %}selected{% endif %}>{{cat.name|raw}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="inputDescription">{{lang["DESCRIPTION"]}}</label>
                    <input type="text" reuired class="form-control" id="inputDescription" name="description" {% if not entry is null %}value="{{entry.description|raw}}"{% endif %}>
                </div>
                <div class="form-group">
                    <label for="dateSelect">{{lang["DATE"]}}</label>
                    <input type="text" class="form-control" id="dateSelect" >
                    <input type="hidden" class="form-control" id="inputDate" name="date" value="{% if not entry is null %}{{entry.date}}{% else %}{{"now"|date('Y-m-d')}}{% endif %}">
                </div>
                <div class="form-group">
                    <label for="inputTime">{{lang["TIME"]}}</label>
                    <input type="time" step="1" class="form-control" id="inputTime" name="time" value="{% if not entry is null %}{{entry.time}}{% else %}{{"now"|date('H:i:s')}}{% endif %}">
                </div>
                <div class="form-group">
                    <label for="inputValue">{{lang["VALUE"]}}</label>
                    <input type="number" required class="form-control" id="inputValue" name="value" step="any" {% if not entry is null %}value="{{entry.value}}{% endif %}">
                </div>

                <div class="form-group">
                    <label class="checkbox" for="checkboxCommon">
                        <input name="set_common" type="checkbox" id="checkboxCommon" {% if entry is not null and entry.common == 1 %}checked{% endif %}>
                        {{lang["COMMON"]}}
                    </label>
                </div>
                <div class="form-group" id="commonValue" {% if entry is null or (entry is not null and entry.common == 0) %}style="display:none;"{% endif %}>
                    <label for="inputCommonValue">{{lang["COMMON_VALUE"]}}</label>
                    <input type="number" class="form-control" id="inputCommonValue" name="common_value" step="any" {% if not entry is null %}value="{{entry.common_value}}{% endif %}">
                </div>

                {% if not entry is null %}
                    <div class="form-group">
                        <label for="inputNotice">{{lang["NOTICE"]}}</label>
                        <input type="text" class="form-control" id="inputNotice" name="notice" {% if not entry is null %}value="{{entry.notice|raw}}{% endif %}">
                    </div>
                {% endif %}

                <div class="form-group">
                    <button type="submit">{% if not entry is null %}{{lang["SAVE"]}}{% else %}{{lang["INSERT"]}}{% endif %}</button>
                    {% if not entry is null %}
                        <button id="cancel" class="danger">{{lang["CANCEL"]}}</button>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
{% endblock %}