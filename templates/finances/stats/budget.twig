{% extends "base.twig" %}

{% set active = 'finances' %}

{% block body %}
    <div class="inner-content">
        <div class="page-header">
            <h2>{{lang["FINANCES_SPENDINGS"]}} {{lang["FOR"]}} {{lang["BUDGET"]}} {{budget|raw}}
            </h2>
            <a href="{{ path_for('finances_budgets') }}"><button class="white">{{lang["BACK"]}}</button></a>
        </div>
        <div class="page-content">

            <canvas id="financeDetailChart" data-values="{{data}}" data-labels="{{labels}}"></canvas>

            <table id="stats_budget_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["DATE"]}}</th>
                        <th>{{lang["TIME"]}}</th>
                        <th>{{lang["DESCRIPTION"]}}</th>
                        <th>{{lang["CATEGORY"]}}</th>
                        <th>{{lang["VALUE"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for entry in stats %}
                        <tr>
                            <td data-title="{{lang["DATE"]}}">{{entry.date}}</td> 
                            <td data-title="{{lang["TIME"]}}">{{entry.time}}</td> 
                            <td data-title="{{lang["DESCRIPTION"]}}">{{entry.description|raw}}</td> 
                            <td data-title="{{lang["CATEGORY"]}}">{{entry.category|raw}}</td> 
                            <td data-title="{{lang["VALUE"]}}">{{entry.value}}</td> 
                            <td><a href="{{  path_for('finances_edit', {'id' : entry.id}) }}"><span class="fa fa-pencil-square-o fa-lg"></span></a></td>
                            <td>{% if entry.bill is empty %}<a href="#" data-url="{{  path_for('finances_delete', {'id' : entry.id}) }}" class="btn-delete"><span class="fa fa-trash fa-lg"></span></a>{% endif %}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}