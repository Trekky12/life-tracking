{% extends "base.twig" %}

{% set active = 'finances' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header">
            <h2>{% if type == 0 %} {{lang["FINANCES_SPENDINGS"]}} {% else %} {{lang["FINANCES_INCOMES"]}} {% endif %}
                {{lang["IN"]}} {{month}}/{{year}} {{lang["FOR"]}} {{lang["CATEGORY"]}} {{category}}
            </h2>
        </div>
        <div class="page-content">
            <button id="go-back-btn">{{lang["BACK"]}}</button>

            <canvas id="financeDetailChart" data-values="{{data}}" data-labels="{{labels}}"></canvas>

            <table id="stats_cat_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["DESCRIPTION"]}}</th>
                        <th>{{lang["VALUE"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for entry in stats %}
                        <tr>
                            <td data-title="{{lang["DESCRIPTION"]}}">{{entry.description}}</td> 
                            <td data-title="{{lang["VALUE"]}}">{{entry.value}}</td> 
                            <td><a href="{{  path_for('finances_edit', {'id' : entry.id}) }}"><span class="fa fa-pencil-square-o fa-lg"></span></a></td>
                            <td><a href="#" data-url="{{  path_for('finances_delete', {'id' : entry.id}) }}" class="btn-delete"><span class="fa fa-trash fa-lg"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}