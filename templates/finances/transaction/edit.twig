{% extends "base.twig" %}

{% set active = 'finances' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{% if not account is null %}{{ url_for_with_last_query_params('finances_transaction', {'account': account.getHash()}) }}{% else %}{{ url_for_with_last_query_params('finances_account') }}{% endif %}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"FINANCES_TRANSACTION"|trans}}</h2>
		</div>
	</div>
{% endblock %}

{% block body %}

	{% if not entry is null and not entry.finance_entry is null %}
		<div class="alert warning">
			<span class="closebtn">&times;</span>
			<span class="alert-message">
				<p>{{ "FINANCES_TRANSACTION_UPDATE_HAS_ENTRY"|trans|raw }}</p>
			</span>
		</div>
	{% endif %}
	{% if not entry is null and not entry.bill_entry is null %}
		<div class="alert warning">
			<span class="closebtn">&times;</span>
			<span class="alert-message">
				<p>{{ "FINANCES_TRANSACTION_UPDATE_HAS_SPLITTED_BILL"|trans|raw }}</p>
			</span>
		</div>
	{% endif %}

	<div class="inner-content">
		<div class="page-content">

			<form class="form-horizontal" action="{{ url_for('finances_transaction_save', {'id' : entry.id}) }}{% if not account is null %}?account={{account.getHash()}}{% endif %}" method="POST">
				<input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
				<input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

				{% if not entry is null %}
					<input name="id" id="entry_id" type="hidden" value="{{entry.id}}">
					<input name="is_confirmed" type="hidden" value="{{entry.is_confirmed}}">
					<input name="is_round_up_savings" type="hidden" value="{{entry.is_round_up_savings}}">
				{% endif %}


				<div class="form-group">
					<label for="inputDescription">{{"DESCRIPTION"|trans}}</label>
					<input type="text" class="form-control" id="inputDescription" name="description" {% if not entry is null %} value="{{entry.description|raw}}" {% endif %}>
				</div>

				<div class="form-group">
					<label for="dateSelect">{{"DATE"|trans}}</label>
					<div class="flatpickr-group" id="dateSelect">
						<input type="text" class="form-control" id="dateSelectField" name="date" value="{% if not entry is null %}{{entry.date}}{% else %}{{"now"|date('Y-m-d')}}{% endif %}" data-input/>

						<a class="flatpickr-input-button" title="toggle" data-toggle>
							{{ fontawesome('fas fa-calendar-days') }}
						</a>

						<a class="flatpickr-input-button" title="clear" data-clear>
							{{ fontawesome('fas fa-xmark') }}
						</a>
					</div>
				</div>
				<div class="form-group">
					<label for="inputTime">{{"TIME"|trans}}</label>
					<input type="time" step="1" class="form-control" id="inputTime" name="time" value="{% if not entry is null %}{{entry.time}}{% else %}{{"now"|date('H:i:s')}}{% endif %}">
				</div>

				<div class="form-group">
					<label for="inputValue">{{"VALUE"|trans}}</label>
					<input type="number" class="form-control" id="inputValue" name="value" step="any" inputmode="decimal" value="{% if not entry is null %}{{entry.value}}{% else %}0{% endif %}"/>
				</div>

				<div class="form-group">
					<label for="account_from">{{"FINANCES_TRANSACTION_ACCOUNT_FROM"|trans}}</label>
					<div class="select-wrapper form-control">
						<select id="account_from" name="account_from" value="{% if not entry is null %}{{entry.account_from}}{% endif %}">
							<option value="">{{"DROPDOWN_NO_PAYMETHOD"|trans}}</option>
							{% for account in accounts %}
								<option value="{{account.id}}" {% if (not entry is null and account.id == entry.account_from) %} selected {% endif %}>{{account.name|raw}}</option>
							{% endfor %}
						</select>
					</div>
				</div>
				<div class="form-group">
					<label for="account_to">{{"FINANCES_TRANSACTION_ACCOUNT_TO"|trans}}</label>
					<div class="select-wrapper form-control">
						<select id="account_to" name="account_to" value="{% if not entry is null %}{{entry.account_to}}{% endif %}">
							<option value="">{{"DROPDOWN_NO_PAYMETHOD"|trans}}</option>
							{% for account in accounts %}
								<option value="{{account.id}}" {% if (not entry is null and account.id == entry.account_to) %} selected {% endif %}>{{account.name|raw}}</option>
							{% endfor %}
						</select>
					</div>
				</div>

				<div class="form-group">
					<button type="submit" class="button">
						{% if not entry is null %}
							{{"SAVE"|trans}}
						{% else %}
							{{"INSERT"|trans}}
						{% endif %}
					</button>
					{% if not entry is null %}
						<button id="cancel" class="button button-text">{{"CANCEL"|trans}}</button>
					{% endif %}
				</div>
			</form>
		</div>
	</div>
{% endblock %}
