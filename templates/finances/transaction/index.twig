{% extends "base.twig" %}

{% set active = 'finances' %}

{% block javascript %}
	<script src="{{baseURL}}/static/js/transactions.js?ver={{CACHEMISS}}"></script>
{% endblock %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('finances_account') }}">
				<span class="back-arrow">{{ fontawesome('fas fa-arrow-left') }}</span>
			</a>
			<h2>{{lang["FINANCES_TRANSACTIONS"]}}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('finances_transaction_edit') }}?account={{account.getHash()}}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{lang["FINANCES_TRANSACTION_ADD"]}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="finance_transaction_table" class="table table-hover small">
				<thead>
					<tr>
						<th></th>
						<th>{{lang["DATE"]}}</th>
						<th>{{lang["TIME"]}}</th>
						<th>{{lang["DESCRIPTION"]}}</th>
						<th>{{lang["VALUE"]}}</th>
						<th>{{lang["FINANCES_TRANSACTION_ACCOUNT_FROM"]}}</th>
						<th>{{lang["FINANCES_TRANSACTION_ACCOUNT_TO"]}}</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for entry in list %}
						<tr data-confirmed="{{entry["attributes"]["data-confirmed"]}}">
							<td>{{ entry["data"][0]|raw }}</td>
							<td>{{ entry["data"][1] }}</td>
							<td>{{ entry["data"][2] }}</td>
							<td>{{ entry["data"][3] }}</td>
							<td>{{ entry["data"][4] }}</td>
							<td>{{ entry["data"][5] }}</td>
							<td>{{ entry["data"][6] }}</td>
							<td>{{ entry["data"][7]|raw }}</td>
							<td>{{ entry["data"][8]|raw }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
