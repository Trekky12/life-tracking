{% extends "base.twig" %}

{% set active = 'finances' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('finances_account') }}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"FINANCES_TRANSACTIONS_RECURRING"|trans}}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('finances_transaction_recurring_edit') }}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{"ADD"|trans}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="transaction_recurring_table" class="table table-hover small">
				<thead>
					<tr>
						<th>{{"DESCRIPTION"|trans}}</th>
						<th>{{"VALUE"|trans}}</th>
						<th>{{"FINANCES_TRANSACTION_ACCOUNT_FROM"|trans}}</th>
						<th>{{"FINANCES_TRANSACTION_ACCOUNT_TO"|trans}}</th>
						<th>{{"START"|trans}}</th>
						<th>{{"END"|trans}}</th>
						<th>{{"INTERVAL"|trans}}</th>
						<th>{{"LAST_RUN"|trans}}</th>
						<th>{{"NEXT_RUN"|trans}}</th>
						<th>{{"ACTIVE"|trans}}</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for entry in list%}
						<tr>
							<td>{{entry.description|raw}}</td>
							<td>{{entry.value}}</td>
							<td>{{accounts[entry.account_from].name|raw}}</td>
							<td>{{accounts[entry.account_to].name|raw}}</td>
							<td>{{entry.start}}</td>
							<td>{{entry.end}}</td>
							<td>{{entry.multiplier}}&nbsp;x&nbsp;{{units[entry.unit]|trans}}</td>
							<td>{{entry.last_run}}</td>
							<td>{{entry.next_run}}</td>
							<td>
								{% if entry.is_active > 0 %}x
								{% endif %}
							</td>
							<td>
								<a href="{{ url_for('finances_transaction_recurring_trigger', {'id' : entry.id}) }}">{{ fontawesome('fas fa-play') }}</a>
							</td>
							<td>
								<a href="{{ url_for('finances_transaction_recurring_edit', {'id' : entry.id}) }}">{{ fontawesome('fas fa-pen-to-square') }}</a>
							</td>
							<td>
								<a href="#" data-url="{{ url_for('finances_transaction_recurring_delete', {'id' : entry.id}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
