{% extends "base.twig" %}

{% set active = 'finances' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('users_activities') }}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"FINANCES_TRANSACTION"|trans}}</h2>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">

			<h4>{{"DESCRIPTION"|trans}}</h4>
			<p>{{entry.description|raw}}</p>

			<h4>{{"VALUE"|trans}}</h4>
			<p>{{entry.value}}</p>

			<h4>{{"FINANCES_TRANSACTION_ACCOUNT_FROM"|trans}}</h4>
			<p>
				{% if not entry.account_from is null %}
					{{accounts[entry.account_from].name|raw}}{% else %}-
				{% endif %}
			</p>

			<h4>{{"FINANCES_TRANSACTION_ACCOUNT_TO"|trans}}</h4>
			<p>
				{% if entry.account_to %}
					{{accounts[entry.account_to].name|raw}}
					{% else %}-
				{% endif %}
			</p>
		</div>
	</div>
{% endblock %}
