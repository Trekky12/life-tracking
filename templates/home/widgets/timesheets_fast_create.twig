<div class="widget-content">
	<a href="#" class="timesheet-fast-come-btn no-toggle" data-url="{{url_for('timesheets_fast_checkin', {'project' : data.hash})}}">
		<button class="button">
			{% if data.is_day_based == 1 %}
				{{"TIMESHEETS_COME_DAY_BASED"|trans}}
			{% else %}
				{{"TIMESHEETS_COME_PROJECT_BASED"|trans}}
			{% endif %}
		</button>
	</a>

	<a href="#" class="timesheet-fast-leave-btn no-toggle" data-url="{{url_for('timesheets_fast_checkout', {'project' : data.hash})}}">
		<button class="button">
			{% if data.is_day_based == 1 %}
				{{"TIMESHEETS_LEAVE_DAY_BASED"|trans}}
			{% else %}
				{{"TIMESHEETS_LEAVE_PROJECT_BASED"|trans}}
			{% endif %}
		</button>
	</a>

	<div id="alertErrorTimesheetFast" class="alert danger hidden">
		<span class="closebtn">&times;</span>
		<span class="alert-message">
			<p>{{ "ENTRY_ERROR"|trans }}</p>
			<p id="alertErrorDetailTimesheetFast"></p>
		</span>
	</div>
	<div id="alertSuccessTimesheetFast" class="alert success hidden">
		<span class="closebtn">&times;</span>
		<span class="alert-message">
			<p>{{ "ENTRY_SUCCESS_ADD"|trans }}</p>
		</span>
	</div>
</div>
