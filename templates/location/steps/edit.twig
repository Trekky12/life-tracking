{% extends "base.twig" %}

{% set active = 'steps' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('steps_stats_month', {'year':year, 'month': month}) }}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"STEPS"|trans}}
				|
				{{ date|date(i18n.dateformatTwig.date) }}</h2>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">

			<form class="form-horizontal" id="locationForm" action="{{ url_for('steps_save', {'date' : date}) }}" method="POST">
				<input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
				<input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

				<div class="form-group">
					<label for="inputSteps">{{"STEPS"|trans}}</label>
					<input type="number" step="any" class="form-control" id="inputSteps" name="steps" pattern="\d*" value="{{ steps }}">
				</div>

				<div class="form-group">
					<button type="submit" class="button">
						{% if steps > 0 %}
							{{"SAVE"|trans}}
						{% else %}
							{{"INSERT"|trans}}
						{% endif %}
					</button>
					{% if steps > 0 %}
						<button id="cancel" class="button button-text">{{"CANCEL"|trans}}</button>
					{% endif %}
				</div>
			</form>
		</div>
	</div>
{% endblock %}
