    {% extends "base.twig" %}

{% set active = 'location' %}


{% block body %}

    <div class="inner-content">
        <div class="page-header">
            <h2>{{lang["STEPS"]}} {{lang["STATS"]}} {{lang["IN"]}} {{month}}/{{year}}</h2>
            <button class="white" id="go-back-btn">{{lang["BACK"]}}</button>
        </div>

        <div class="page-content">
            
            <canvas id="stepsSummaryChart" data-values="{{data}}" data-labels="{{labels}}" data-label="{{lang["STEPS_AVG"]}}"></canvas>
            
            <table id="steps_month_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["DATE"]}}</th>
                        <th>{{lang["STEPS_SUM"]}}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for year, entry in stats %}
                        <tr>
                            <td data-title="{{lang["DATE"]}}">{{entry[0]}}</td> 
                            <td data-title="{{lang["STEPS_SUM"]}}">{{ entry[1]|number_format(0, '', '.')}}</td> 
                            <td>
                                <a href="{{  path_for('steps_day_edit', {'date': entry[0] }) }}"><i class="fa fa-pencil-square-o fa-lg"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}