{% extends "mail/mail.twig" %}


{% block body %}
    {% embed 'mail/modules/content.twig' %}
        {% block content %}
            <div id="inner-content">
                <h1 id="headline">{{headline}}</h1>
                <p>{{content|raw}}</p>
                {% if extra %}
                    <div id="extra">
                        {{extra|raw}}
                    </div>
                {% endif %}
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}