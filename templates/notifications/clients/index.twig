{% extends "base.twig" %}

{% set active = 'settings' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<h2>{{"NOTIFICATIONS"|trans}}</h2>
		</div>
	</div>
{% endblock %}

{% block tabbar %}
	{% include "main/settings-tabs.twig" with {'active':'notifications_clients'} only %}
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="notifications_table" class="table table-hover small">
				<thead>
					<tr>
						<th>{{"LOGIN"|trans}}</th>
						<th>{{"IP_ADDRESS"|trans}}</th>
						<th>{{"USER_AGENT"|trans}}</th>
						<th>{{"CREATED_ON"|trans}}</th>
						<th>{{"CHANGED_ON"|trans}}</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for entry in list %}
						<tr>
							<td>{{users[entry.user].login}}</td>
							<td>{{entry.ip}}</td>
							<td>{{entry.agent}}</td>
							<td>{{entry.createdOn}}</td>
							<td>{{entry.changedOn}}</td>


							<td>
								<a href="{{ url_for('notifications_clients_test', {'id' : entry.id}) }}">{{ fontawesome('far fa-bell') }}</a>
							</td>
							<td>
								<a href="#" data-url="{{ url_for('notifications_clients_delete', {'id' : entry.id}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
