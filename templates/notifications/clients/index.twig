{% extends "base.twig" %}

{% set active = 'settings' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["NOTIFICATIONS"]}}</h2></div>
        <div class="page-content">
            <table id="notifications_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["LOGIN"]}}</th>
                        <th>{{lang["IP_ADDRESS"]}}</th>
                        <th>{{lang["USER_AGENT"]}}</th>
                        <th>{{lang["CREATED_ON"]}}</th>
                        <th>{{lang["CHANGED_ON"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for entry in list %}
                        <tr>
                            <td>{{users[entry.user].login}}</td> 
                            <td>{{entry.ip}}</td> 
                            <td>{{entry.agent}}</td> 
                            <td>{{entry.createdOn}}</td> 
                            <td>{{entry.changedOn}}</td>
                            
                            
                            <td><a href="{{  path_for('notifications_clients_test', {'id' : entry.id}) }}"><span class="far fa-bell fa-lg"></span></a></td>
                            <td><a href="#" data-url="{{  path_for('notifications_clients_delete', {'id' : entry.id}) }}" class="btn-delete"><span class="fas fa-trash fa-lg"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}