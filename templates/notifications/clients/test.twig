{% extends "base.twig" %}

{% set active = 'settings' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('notifications_clients')}}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"NOTIFICATIONS"|trans}}</h2>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">

			<form action="{{ url_for('notifications_clients_test', {'id' : entry.id}) }}" method="POST">
				<input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
				<input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">


				<input name="id" id="entry_id" type="hidden" value="{{entry.id}}">


				<div class="form-group">
					<label for="inputTitle">{{"TITLE"|trans}}</label>
					<input required type="text" class="form-control" id="inputTitle" name="title"/>
				</div>

				<div class="form-group">
					<label for="inputContent">{{"CONTENT"|trans}}</label>
					<input required type="text" class="form-control" id="inputContent" name="message"/>
				</div>

				<div class="form-group">
					<button type="submit" class="button">{{"SEND"|trans}}</button>
					<button id="cancel" class="button button-text">{{"CANCEL"|trans}}</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
