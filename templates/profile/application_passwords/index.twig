{% extends "base.twig" %}

{% set active = 'profile' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["APPLICATION_PASSWORDS"]}}</h2> 
            <div class="buttons">
                <a href="{{ url_for('users_application_passwords_edit') }}"><button class="white"><i class="fas fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a>
            </div>
        </div>
        <div class="page-content">
            <table id="application_passwords_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{ lang["NAME"] }}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for el in list %}
                        <tr>
                            <td>{{ el.name }}</td>
                            <td><a href="#" data-url="{{ url_for('users_application_passwords_delete', {'id' : el.id}) }}" class="btn-delete"><span class="fas fa-trash fa-lg"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}