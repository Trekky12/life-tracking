{% extends "base.twig" %}

{% set active = 'profile' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["MOBILE_FAVORITES"]}}</h2> <a href="{{ url_for('users_mobile_favorites_edit') }}"><button class="white"><i class="fas fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a></div>
        <div class="page-content">
            <table id="mobile_favorites_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{ lang["POSITION"] }}</th>
                        <th>{{ lang["ICON"] }}</th>
                        <th>{{ lang["URL"] }}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for el in list %}
                        <tr>
                            <td>{{ el.position }}</td> 
                            <td><i class="fa-lg {{el.icon}}"></i></td> 
                            <td>{{el.url|raw}}</td> 
                            <td><a href="{{ url_for('users_mobile_favorites_edit', {'id' : el.id}) }}"><span class="fas fa-edit fa-lg"></span></a></td>
                            <td><a href="#" data-url="{{ url_for('users_mobile_favorites_delete', {'id' : el.id}) }}" class="btn-delete"><span class="fas fa-trash fa-lg"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}