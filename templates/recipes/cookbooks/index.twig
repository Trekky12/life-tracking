{% extends "base.twig" %}

{% set active = 'recipes' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["RECIPES_COOKBOOKS"]}}</h2> 
            <div class="buttons">
                <a href="{{  url_for('recipes_cookbooks_edit') }}"><button class="white"><i class="fas fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a>
            </div>
        </div>
        <div class="page-content">
            <table id="recipes_cookbooks_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{ lang["NAME"] }}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for cookbook in cookbooks %}
                        <tr>
                            <td><a href="{{  url_for('recipes_cookbooks_view', {'cookbook' : cookbook.hash}) }}">{{ cookbook.name|raw }}</a></td> 
                            <td>
                                {% if cookbook.getOwner() == user.id %}
                                    <a href="{{  url_for('recipes_cookbooks_edit', {'id' : cookbook.id}) }}"><span class="fas fa-edit fa-lg"></span></a>
                                    {% endif %}
                            </td>
                            <td>
                                {% if cookbook.getOwner() == user.id %}
                                    <a href="#" data-url="{{  url_for('recipes_cookbooks_delete', {'id' : cookbook.id}) }}" class="btn-delete"><span class="fas fa-trash fa-lg"></span></a>
                                    {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}