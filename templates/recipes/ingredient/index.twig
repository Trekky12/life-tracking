{% extends "base.twig" %}

{% set active = 'recipes' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["RECIPES_INGREDIENTS"]}}</h2> 
            <div class="buttons">
                <a href="{{  url_for('recipes_ingredients_edit') }}"><button class="button">{{ fontawesome('fas fa-plus') }} {{lang["ADD"]}}</button></a>
            </div>
        </div>
        <div class="page-content">
            <table id="recipes_ingredients_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["NAME"]}}</th>
                        <th>{{lang["UNIT"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for ingredient in ingredients %}
                        <tr>
                            <td>{{ingredient.name|raw}}</td> 
                            <td>{{ingredient.unit}}</td> 
                            <td>
                                {% if ingredient.getOwner() == user.id %}
                                    <a href="{{  url_for('recipes_ingredients_edit', {'id' : ingredient.id}) }}">{{ fontawesome('fas fa-edit') }}</a>
                                {% endif %}
                            </td>
                                
                            <td>
                                {% if ingredient.getOwner() == user.id %}
                                    <a href="#" data-url="{{  url_for('recipes_ingredients_delete', {'id' : ingredient.id}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}