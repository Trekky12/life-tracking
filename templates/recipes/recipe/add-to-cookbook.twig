{% extends "base.twig" %}

{% set active = 'recipes' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('recipes_recipe_view', {'recipe': recipe.hash}) }}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"RECIPE"|trans}}
				-
				{{ recipe.name|raw }}</h2>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">

			<form class="form-horizontal" action="{{ url_for('recipes_cookbooks_add_recipe') }}" method="POST">
				<input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
				<input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

				<input type="hidden" name="recipe" value="{{recipe.id}}">

				<div class="form-group">
					<label for="cookbook">{{"RECIPES_COOKBOOK"|trans}}</label>
					<div class="select-wrapper form-control">
						<select id="cookbook" name="cookbook">
							{% for cookbook in cookbooks %}
								<option value="{{cookbook.id}}">{{cookbook.name|raw}}</option>
							{% endfor %}
						</select>
					</div>
				</div>
				<div class="form-group-btn">
					<button type="submit" class="button">
						{% if not entry is null %}
							{{"SAVE"|trans}}
						{% else %}
							{{"INSERT"|trans}}
						{% endif %}
					</button>
					{% if not entry is null %}
						<button id="cancel" class="button button-text">{{"CANCEL"|trans}}</button>
					{% endif %}
				</div>
			</form>
		</div>
	</div>


{% endblock %}
