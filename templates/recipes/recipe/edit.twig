{% extends "base.twig" %}

{% set active = 'recipes' %}

{% block style %}
	<link rel="stylesheet" type="text/css" href="{{baseURL}}/static/assets/css/selectr.min.css?ver={{CACHEMISS}}"/>
{% endblock %}

{% block javascript %}
	<script src="{{baseURL}}/static/assets/js/autoComplete.min.js?ver={{CACHEMISS}}"></script>
	<script src="{{baseURL}}/static/assets/js/Sortable.min.js?ver={{CACHEMISS}}"></script>
	<script src="{{baseURL}}/static/assets/js/selectr.min.js?ver={{CACHEMISS}}"></script>
	<script src="{{baseURL}}/static/js/recipes.js?ver={{CACHEMISS}}"></script>
{% endblock %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{% if not entry is null %}{{ url_for_with_last_query_params('recipes_recipe_view', {'recipe': entry.hash}) }}{% else %}{{ url_for_with_last_query_params('recipes') }}{% endif %}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"RECIPE"|trans}}</h2>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">

			<form class="form-horizontal" action="{{ url_for('recipes_save', {'id' : entry.id}) }}" method="POST" enctype="multipart/form-data">
				<input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
				<input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

				{% if not entry is null %}
					<input name="id" id="entry_id" type="hidden" value="{{entry.id}}">
				{% endif %}

				<div class="form-group">
					<label for="inputName">{{"NAME"|trans}}</label>
					<input type="text" required="required" class="form-control" id="inputName" name="name" {% if not entry is null %} value="{{entry.name|raw}}" {% endif %}>
				</div>

				<div class="form-group">
					<label for="inputDescription">{{"DESCRIPTION"|trans}}</label>
					<textarea class="form-control" id="inputDescription" name="description" rows="10">
						{%- if not entry is null -%}
							{{- entry.description|raw -}}
						{%- endif -%}
					</textarea>
				</div>

				<div class="form-group two-columns mobile">
					<div class="left">
						<div class="form-group">
							<label for="inputPreparationTime">{{"RECIPES_PREPARATION_TIME"|trans}}</label>
							<input type="number" class="form-control" id="inputPreparationTime" name="preparation_time" step="1" pattern="\d*" placeholder="" {% if not entry is null %} value="{{entry.preparation_time}}" {% endif %}>
						</div>
					</div>
					<div class="right">
						<div class="form-group">
							<label for="inputWaitingTime">{{"RECIPES_WAITING_TIME"|trans}}</label>
							<input type="number" class="form-control" id="inputWaitingTime" name="waiting_time" step="1" pattern="\d*" placeholder="" {% if not entry is null %} value="{{entry.waiting_time}}" {% endif %}>
						</div>
					</div>
				</div>

				<div class="form-group">
					<label for="inputServings">{{"RECIPES_SERVINGS"|trans}}</label>
					<input type="number" class="form-control" id="inputServings" name="servings" step="1" pattern="\d*" placeholder="" {% if not entry is null %} value="{{entry.servings}}" {% endif %}>
				</div>

				<div class="form-group">
					<label for="inputLink">{{"LINK"|trans}}</label>
					<input type="text" class="form-control" id="inputLink" name="link" {% if not entry is null %} value="{{entry.link|raw}}" {% endif %}>
				</div>

				<h3>{{"IMAGE"|trans}}</h3>
				<div class="form-group">
					{% if not entry is null and entry.get_image() != ''%}
						<img class="image_uploaded" src="/{{uploads_folder}}/recipes/{{entry.get_thumbnail()}}"/>
					{% endif %}
					<input name="image" id="image" class="form-control" type="file">
				</div>
				{% if not entry is null and entry.get_image() != ''%}
					<div class="form-group">
						<label class="checkbox" for="checkboxDeleteImage">
							<input name="delete_image" type="checkbox" value="1" id="checkboxDeleteImage">
							{{"DELETE"|trans}}
						</label>
					</div>
				{% endif %}


				<h3>{{"RECIPES_STEPS"|trans}}</h3>
				<div id="recipes_steps">
					{% for step in steps %}
						{% set step_idx = loop.index-1 %}
						<div class="step" data-idx="{{ step.position }}">
							<div class="step-content">
								<div class="form-group">
									<label>{{"NAME"|trans}}</label>
									<input type="text" name="steps[{{ step_idx }}][name]" value="{{ step["name"] }}">
								</div>
								<div class="step-container">
									<div class="form-group two-columns mobile">
										<div class="left">
											<div class="form-group">
												<label>{{"RECIPES_PREPARATION_TIME"|trans}}</label>
												<input type="number" step="1" pattern="\d*" name="steps[{{ step_idx }}][preparation_time]" value="{{ step["preparation_time"] }}">
											</div>
										</div>
										<div class="right">
											<div class="form-group">
												<label>{{"RECIPES_WAITING_TIME"|trans}}</label>
												<input type="number" step="1" pattern="\d*" name="steps[{{ step_idx }}][waiting_time]" value="{{ step["waiting_time"] }}">
											</div>
										</div>
									</div>

									<div class="form-group">
										<label>{{"DESCRIPTION"|trans}}</label>
										<textarea rows="5" name="steps[{{ step_idx }}][description]">{{ step["description"] }}</textarea>
									</div>

									<div class="step-ingredients">
										{% if step.id in ingredients|keys %}
											{% for ingredient in ingredients[step.id] %}
												<div class="step-ingredient">
													<span class="ingredient-handle handle">{{ fontawesome('fas fa-up-down-left-right') }}</span>
													<input type="number" step="any" inputmode="decimal" class="step-ingredient-amount" name="steps[{{ step_idx }}][ingredients][{{ loop.index-1 }}][amount]" placeholder="{{ "RECIPES_AMOUNT"|trans }}" value="{{ ingredient["amount"] }}"/>
													<input type="text" class="step-ingredient-unit" name="steps[{{ step_idx }}][ingredients][{{ loop.index-1 }}][unit]" placeholder="{{ "UNIT"|trans }}" value="{{ ingredient["unit"] }}"/>
													<div id="ingredient-suggestion-wrapper-{{step_idx}}-{{loop.index-1}}" class="ingredient-suggestion-wrapper">
														<input type="hidden" id="step-ingredient-id-{{step_idx}}-{{loop.index-1}}" class="step-ingredient-id" name="steps[{{ step_idx }}][ingredients][{{ loop.index-1 }}][id]" value="{{ ingredient["ingredient"]}}"/>
														<input type="text" id="step-ingredient-select-{{step_idx}}-{{loop.index-1}}" class="step-ingredient-select" placeholder="{{ "RECIPES_INGREDIENT"|trans }}" name="steps[{{ step_idx }}][ingredients][{{ loop.index-1 }}][ingredient]" autocomplete="off" value="{{ ingredient["name"] }}" data-ingredient="{{ ingredient["name"] }}"/>
													</div>
													<input type="text" class="step-ingredient-notice" name="steps[{{ step_idx }}][ingredients][{{ loop.index-1 }}][notice]" placeholder="{{ "NOTICE"|trans }}" value="{{ ingredient["notice"] }}"/>
													<span class="remove-ingredient minus">{{ fontawesome('fas fa-minus') }}</span>
												</div>
											{% endfor %}
										{% endif %}

									</div>

									<div class="form-group add-ingredient-btn-wrapper">
										<button type="button" class="add-ingredient-btn button button-outlined small">{{ "RECIPES_ADD_INGREDIENT"|trans }}</button>
									</div>
								</div>
							</div>

							<div class="icons">
								<span class="step-minus minus">{{ fontawesome('fas fa-minus') }}</span>
								<span class="step-handle handle">{{ fontawesome('fas fa-up-down-left-right') }}</span>
							</div>
						</div>
					{% endfor %}

				</div>
				<div class="form-group add-step-btn-wrapper">
					<button type="button" id="add-step-btn" class="button button-outlined small">{{ "RECIPES_ADD_STEP"|trans }}</button>
				</div>


				<!--<div class="right" style="position:sticky; top:75px; align-self:flex-start; ">
																								                    test
																								                    test
																								                    tes
																								                    t
																								                </div> -->

				<div class="form-group">
					<button type="submit" class="button">
						{% if not entry is null %}
							{{"SAVE"|trans}}
						{% else %}
							{{"INSERT"|trans}}
						{% endif %}
					</button>
					{% if not entry is null %}
						<button id="cancel" class="button button-text">{{"CANCEL"|trans}}</button>
					{% endif %}
				</div>
			</form>
		</div>
	</div>

	<div id="templates" class="hidden">
		<div class="step step-dummy">
			<div class="step-content">
				<div class="form-group">
					<label>{{"NAME"|trans}}</label>
					<input type="text" disabled="disabled" name="steps[dummy][name]" class="step_name">
				</div>
				<div class="form-group two-columns mobile">
					<div class="left">
						<div class="form-group">
							<label>{{"RECIPES_PREPARATION_TIME"|trans}}</label>
							<input type="number" disabled="disabled" step="1" pattern="\d*" name="steps[dummy][preparation_time]">
						</div>
					</div>
					<div class="right">
						<div class="form-group">
							<label>{{"RECIPES_WAITING_TIME"|trans}}</label>
							<input type="number" disabled="disabled" step="1" pattern="\d*" name="steps[dummy][waiting_time]">
						</div>
					</div>
				</div>

				<div class="form-group">
					<label>{{"DESCRIPTION"|trans}}</label>
					<textarea disabled="disabled" rows="5" name="steps[dummy][description]"></textarea>
				</div>

				<div class="step-ingredients"></div>

				<div class="form-group add-ingredient-btn-wrapper">
					<button type="button" class="add-ingredient-btn button button-outlined small">{{ "RECIPES_ADD_INGREDIENT"|trans }}</button>
				</div>
			</div>
			<div class="icons">
				<span class="step-minus minus">{{ fontawesome('fas fa-minus') }}</span>
				<span class="step-handle handle">{{ fontawesome('fas fa-up-down-left-right') }}</span>
			</div>
		</div>
		<div class="step-ingredient step-ingredient-dummy">
			<span class="ingredient-handle handle">{{ fontawesome('fas fa-up-down-left-right') }}</span>
			<input type="number" step="any" inputmode="decimal" class="step-ingredient-amount" name="steps[dummy_step][ingredients][dummy_ingredient][amount]" placeholder="{{ "RECIPES_AMOUNT"|trans }}"/>
			<input type="text" class="step-ingredient-unit" name="steps[dummy_step][ingredients][dummy_ingredient][unit]" placeholder="{{ "UNIT"|trans }}"/>
			<div id="ingredient-suggestion-wrapper" class="ingredient-suggestion-wrapper">
				<input type="hidden" id="step-ingredient-id" class="step-ingredient-id" name="steps[dummy_step][ingredients][dummy_ingredient][id]"/>
				<input type="text" id="step-ingredient-select" class="step-ingredient-select" placeholder="{{ "RECIPES_INGREDIENT"|trans }}" name="steps[dummy_step][ingredients][dummy_ingredient][ingredient]" autocomplete="off" data-selected=""/>
			</div>
			<input type="text" class="step-ingredient-notice" name="steps[dummy_step][ingredients][dummy_ingredient][notice]" placeholder="{{ "NOTICE"|trans }}"/>
			<span class="remove-ingredient minus">{{ fontawesome('fas fa-minus') }}</span>
		</div>
	</div>
{% endblock %}
