{% extends "base.twig" %}

{% set active = 'recipes' %}

{% block javascript %}
	<script src="{{baseURL}}/static/js/recipes-recipe.js?ver={{CACHEMISS}}"></script>
{% endblock %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<h2>{{"RECIPES"|trans}}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('recipes_edit') }}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{"ADD"|trans}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block tabbar %}
	{% include "recipes/recipes-tabs.twig" with {'active':'recipes'} only %}
{% endblock %}

{% block body %}
	<div class="recipe-filter">
		<input type="text" id="filterSearchRecipes" placeholder="{{ "SEARCHING"|trans }}"/>
	</div>
	<div class="content">
		<div id="recipes_list"></div>
		<div id="loadingIconRecipes" class="centered loading-icon">
			<span class="spinning">{{ fontawesome('fas fa-circle-notch') }}</span>
		</div>
		<div id="loadMoreRecipes" class="centered hidden">
			<button type="button" class="button">{{ "LOAD_MORE"|trans }}</button>
		</div>
	</div>


{% endblock %}
