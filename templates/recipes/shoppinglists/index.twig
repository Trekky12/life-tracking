{% extends "base.twig" %}

{% set active = 'recipes' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<h2>{{lang["RECIPES_SHOPPINGLISTS"]}}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('recipes_shoppinglists_edit') }}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{lang["ADD"]}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block tabbar %}
	{% include "recipes/recipes-tabs.twig" with {'active':'recipes_shoppinglists'} only %}
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="recipes_shoppinglists_table" class="table table-hover small">
				<thead>
					<tr>
						<th>{{ lang["NAME"] }}</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for shoppinglist in shoppinglists %}
						<tr>
							<td>
								<a href="{{ url_for('recipes_shoppinglists_view', {'shoppinglist' : shoppinglist.hash}) }}">{{ shoppinglist.name|raw }}</a>
							</td>
							<td>
								{% if shoppinglist.getOwner() == user.id %}
									<a href="{{ url_for('recipes_shoppinglists_edit', {'id' : shoppinglist.id}) }}">{{ fontawesome('fas fa-pen-to-square') }}</a>
								{% endif %}
							</td>
							<td>
								{% if shoppinglist.getOwner() == user.id %}
									<a href="#" data-url="{{ url_for('recipes_shoppinglists_delete', {'id' : shoppinglist.id}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
