{% extends "base.twig" %}

{% set active = 'splitbills' %}


{% block body %}
    <div class="inner-content">
        <div class="page-header"><h2>{{lang["SPLITBILLS"]}} | {{group.name|raw}}</h2> <a href="{{  path_for('splitbill_bills_edit', {'group':group.hash}) }}"><button class="white"><i class="fa fa-plus" aria-hidden="true"></i> {{lang["ADD_BILL"]}}</button></a></div>
    </div>

    {% if user.id in balance|keys %}
        <div class="grid" id="splitbill_overview">
            <div class="card negative">
                <div class="card-content">
                    <h3>{{ lang["SPEND"] }}</h3>
                    <p>{{ balance[user.id]["spend"] }} {{group.currency}}</p>
                </div>
            </div>
            <div class="card positive">
                <div class="card-content">
                    <h3>{{ lang["PAID"] }}</h3>
                    <p>{{ balance[user.id]["paid"] }} {{group.currency}}</p>
                </div>
            </div>
            <div class="card {% if balance[user.id]["balance"] >= 0 %}positive{% else %}negative{% endif %}">
                <div class="card-content">
                    <h3>{{ lang["BALANCE"] }}</h3>
                    <p>{{ balance[user.id]["balance"] }} {{group.currency}}</p>
                </div>
            </div>
        </div>
    {% endif %}

    {% if balance|length  > 0 %}
        <div class="inner-content splitbill_total">
            <div class="page-content">
                {% for user_id, b in balance if b["user"] != user.id and (b['spend'] > 0 or b['paid'] > 0) %}

                    {% set total = '' %}
                    {% if balance|length  > 2 %}
                        {% if  b['balance'] > 0 %}
                            {% set total = lang['PERSON_RECEIVES_TOTAL']| format(b['balance']|abs, group.currency) %}
                        {% else %}
                            {% set total = lang['PERSON_OWES_TOTAL']| format(b['balance']|abs, group.currency) %}
                        {% endif %}

                    {% endif %}

                    {% if b["owe"] < 0 %}
                        <p class="negative">{{ lang["PERSON_OWES_ME"]|format( users[b["user"]].name, b["owe"]|abs, group.currency) }} {{ total }}</p>
                    {% else %}
                        <p class="positive">{{ lang["PERSON_RECEIVES_BY_ME"]|format( users[b["user"]].name, b["owe"]|abs, group.currency) }} {{ total }}</p>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <div class="inner-content">
        <div class="page-content">
            <table id="splitbills_bills_table" class="table table-hover small" data-currency="{{group.currency}}">
                <thead>
                    <tr>
                        <th>{{lang["DATE"]}}</th>
                        <th>{{lang["TIME"]}}</th>
                        <th>{{lang["NAME"]}}</th>
                        <th>{{ lang["SPEND"] }}</th>
                        <th>{{ lang["PAID"] }}</th>
                        <th>{{ lang["BALANCE"] }}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for bill in bills %}
                        <tr>
                            <td>{{ bill[0] }}</td>
                            <td>{{ bill[1] }}</td>
                            <td>{{ bill[2] }}</td>
                            <td>{{ bill[3] }}</td>
                            <td>{{ bill[4] }}</td>
                            <td>{{ bill[5] }}</td>
                            <td>{{ bill[6]|raw }}</td>
                            <td>{{ bill[7]|raw }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}        
