{% extends "base.twig" %}

{% set active = 'splitbills' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<h2>{{lang["SPLITBILL_GROUPS"]}}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('splitbill_groups_edit') }}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{lang["ADD"]}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="splitbills_groups_table" class="table table-hover small">
				<thead>
					<tr>
						<th>{{lang["NAME"]}}</th>
						<th>{{lang["BALANCE"]}}</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for group in groups %}
						<tr>
							<td>
								<a href="{{ url_for('splitbill_bills', {'group' : group.hash}) }}">{{group.name|raw}}</a>
							</td>
							<td data-currency="{{i18n.currency}}">{{balances[group.id].balance}}</td>
							<td>
								<a href="{{ url_for('splitbill_bills_recurring', {'group' : group.hash}) }}">{{ fontawesome('fas fa-calendar-days') }}</a>
							</td>
							<td>
								{% if group.user == user.id %}
									<a href="{{ url_for('splitbill_groups_edit', {'id' : group.id}) }}">{{ fontawesome('fas fa-pen-to-square') }}</a>
								{% endif %}
							</td>
							<td>
								{% if group.user == user.id %}
									<a href="#" data-url="{{ url_for('splitbill_groups_delete', {'id' : group.id}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
