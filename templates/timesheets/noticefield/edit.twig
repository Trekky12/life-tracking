{% extends "base.twig" %}

{% set active = 'timesheets' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('timesheets_noticefields', {'project': project.hash})}}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"TIMESHEETS_NOTICEFIELDS"|trans}}
				|
				{{ project.name }}</h2>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">

			<form class="form-horizontal" action="{{ url_for('timesheets_noticefields_save', {'id' : entry.id, 'project' : project.hash}) }}" method="POST">
				<input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
				<input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">

				{% if not entry is null %}
					<input name="id" id="entry_id" type="hidden" value="{{entry.id}}">
				{% endif %}

				<div class="form-group">
					<label for="inputName">{{"NAME"|trans}}</label>
					<input type="text" class="form-control" id="inputName" name="name" {% if not entry is null %} value="{{entry.name}}" {% endif %}>
				</div>

				<div class="form-group">
					<label class="checkbox" for="radioTypeSheet">
						<input name="type" type="radio" value="sheet" id="radioTypeSheet" {% if (entry is null) or (entry is not null and entry.type == "sheet" )%} checked="checked" {% endif %}>
						{{"DATAOBJECT_TIMESHEETS_SHEET"|trans}}
					</label>
					<br/>
					<label class="checkbox" for="radioTypeCustomer">
						<input name="type" type="radio" value="customer" id="radioTypeCustomer" {% if (entry is not null and entry.type == "customer" )%} checked="checked" {% endif %}>
						{{"TIMESHEETS_CUSTOMER"|trans}}
					</label>
					<br/>
					<label class="checkbox" for="radioTypeProject">
						<input name="type" type="radio" value="project" id="radioTypeProject" {% if (entry is not null and entry.type == "project" )%} checked="checked" {% endif %}>
						{{"DATAOBJECT_TIMESHEETS_PROJECT"|trans}}
					</label>
				</div>

				<div class="form-group">
					<label for="inputDescription">{{"DESCRIPTION"|trans}}</label>
					<input type="text" class="form-control" id="inputDescription" name="description" {% if not entry is null %} value="{{entry.description|raw}}" {% endif %}>
				</div>

				<div class="form-group">
					<label for="inputPosition">{{"POSITION"|trans}}</label>
					<input type="number" class="form-control" id="inputPosition" name="position" step="1" pattern="\d*" {% if not entry is null %} value="{{entry.position}}" {% endif %}>
				</div>

				<div class="form-group">
					<label for="datatype">{{"DATA_TYPE"|trans}}</label>
					<div class="select-wrapper form-control">
						<select id="datatype" name="datatype">
							{% for key, name in dataTypes %}
								<option value="{{key}}" {% if not entry is null and key == entry.datatype %} selected {% endif %}>{{name|trans}}</option>
							{% endfor %}
						</select>
					</div>
					<label for="initialization">{{"DATATYPE_INITIALIZATION"|trans}}</label>
					<textarea class="form-control" id="initialization" name="initialization">
						{%- if entry -%}
							{{entry.initialization}}
						{%- endif -%}
					</textarea>
				</div>

				<div class="form-group">
					<label class="checkbox" for="checkboxDefault">
						<input name="is_default" type="checkbox" value="1" id="checkboxDefault" {% if entry is not null and entry.is_default == 1 %} checked {% endif %}>
						{{"DEFAULT"|trans}}
					</label>
				</div>

				<div class="form-group btn">
					<button type="submit" class="button">
						{% if not entry is null %}
							{{"SAVE"|trans}}
						{% else %}
							{{"INSERT"|trans}}
						{% endif %}
					</button>
					{% if not entry is null %}
						<button id="cancel" class="button button-text">{{"CANCEL"|trans}}</button>
					{% endif %}
				</div>
			</form>
		</div>
	</div>
{% endblock %}
