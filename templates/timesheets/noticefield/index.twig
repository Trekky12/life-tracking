{% extends "base.twig" %}

{% set active = 'timesheets' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('timesheets')}}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"TIMESHEETS_NOTICEFIELDS"|trans}}
				|
				{{ project.name }}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('timesheets_noticefields_edit', {'project': project.hash}) }}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{"ADD"|trans}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="noticefields_table" class="table table-hover small">
				<thead>
					<tr>
						<th>{{"NAME"|trans}}</th>
						<th>{{"TYPE"|trans}}</th>
						<th>{{"DEFAULT"|trans}}</th>
						<th>{{"POSITION"|trans}}</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for field in fields %}
						<tr>
							<td>{{field.name}}</td>
							<td>
								{%- if field.type == "sheet" -%}
									{{- "DATAOBJECT_TIMESHEETS_SHEET"|trans -}}
								{%- elseif field.type == "customer" -%}
									{{- "TIMESHEETS_CUSTOMER"|trans -}}
								{%- elseif field.type == "project" -%}
									{{- "DATAOBJECT_TIMESHEETS_PROJECT"|trans -}}
								{%- endif -%}
							</td>
							<td>
								{% if field.is_default == 1 %}x
								{% endif %}
							</td>
							<td>{{field.position}}</td>
							<td>
								<a href="{{ url_for('timesheets_noticefields_edit', {'id' : field.id, 'project' : project.hash}) }}">{{ fontawesome('fas fa-pen-to-square') }}</a>
							</td>
							<td>
								<a href="#" data-url="{{ url_for('timesheets_noticefields_delete', {'id' : field.id, 'project' : project.hash}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
