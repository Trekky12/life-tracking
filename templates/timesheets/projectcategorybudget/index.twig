{% extends "base.twig" %}

{% set active = 'timesheets' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('timesheets_project_categorybudget_view', {'project': project.hash}) }}">
				<div tabindex="-1" class="icon-ripple-wrapper back-arrow">{{ fontawesome('fas fa-arrow-left') }}</div>
			</a>
			<h2>{{"TIMESHEETS_PROJECT_CATEGORY_BUDGETS"|trans}}
				|
				{{ project.name }}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('timesheets_project_categorybudget_edit', {'project': project.hash}) }}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{"ADD"|trans}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<form method="GET" id="tableHeaderFilter" class="search-filter">
				<div class="filter-row">
					<div class="filter-group">
						<div class="filter-element">
							<div class="select-wrapper form-control">
								<select name="is_hidden">
									<option value="0" {% if is_hidden == 0 %} selected {% endif %}>{{"SHOW_NOT_HIDDEN"|trans}}</option>
									<option value="1" {% if is_hidden == 1 %} selected {% endif %}>{{"SHOW_HIDDEN"|trans}}</option>
									<option value="" {% if is_hidden is empty %} selected {% endif %}>{{"SHOW_ALL"|trans}}</option>
								</select>
							</div>
						</div>
					</div>
				</div>
				<div class="filter-row">
					<div class="filter-element">
						<input type="submit" class="button" value="{{"FILTER_RESULT"|trans}}"/>
					</div>
				</div>
			</form>
		</div>
	</div>

	<div class="inner-content">
		<div class="page-content">
			<table id="project_categorybudgets_table" class="table table-hover small">
				<thead>
					<tr>
						<th>
							{% if project.customers_name_singular %}
								{{project.customers_name_singular}}
							{% else %}
								{{"TIMESHEETS_CUSTOMER"|trans}}
							{% endif %}
						</th>
						<th>{{"NAME"|trans}}</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for budget in categorybudgets %}
						<tr>
							<td>{{customers[budget.customer].name|raw}}</td>
							<td>{{budget.name}}</td>
							<td>
								<a href="{{ url_for('timesheets_project_categorybudget_edit', {'id' : budget.id, 'project' : project.hash}) }}">{{ fontawesome('fas fa-pen-to-square') }}</a>
							</td>
							<td>
								<a href="{{ url_for('timesheets_project_categorybudget_edit', {'project' : project.hash}) }}?template={{ budget.id }}">{{ fontawesome('fas fa-clone') }}</a>
							</td>
							<td>
								<a href="#" data-url="{{ url_for('timesheets_project_categorybudget_delete', {'id' : budget.id, 'project' : project.hash}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
