{% extends "base.twig" %}

{% set active = 'timesheets' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<a href="{{ url_for_with_last_query_params('timesheets', {'project' : project.hash}) }}">
				<span class="back-arrow">{{ fontawesome('fas fa-arrow-left') }}</span>
			</a>
			<h2>{{lang["TIMESHEETS_PROJECT_CATEGORY_BUDGETS"]}}
				|
				{{ project.name }}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('timesheets_project_categorybudget_edit', {'project': project.hash}) }}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{lang["ADD"]}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="project_categorybudgets_table" class="table table-hover small">
				<thead>
					<tr>
						<th>{{lang["NAME"]}}</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for budget in categorybudgets %}
						<tr>
							<td>{{budget.name}}</td>
							<td>
								<a href="{{ url_for('timesheets_project_categorybudget_edit', {'id' : budget.id, 'project' : project.hash}) }}">{{ fontawesome('fas fa-pen-to-square') }}</a>
							</td>
							<td>
								<a href="{{ url_for('timesheets_project_categorybudget_edit', {'project' : project.hash}) }}?template={{ budget.id }}">{{ fontawesome('fas fa-clone') }}</a>
							</td>
							<td>
								<a href="#" data-url="{{ url_for('timesheets_project_categorybudget_delete', {'id' : budget.id, 'project' : project.hash}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
