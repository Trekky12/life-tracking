{% extends "base.twig" %}

{% set active = 'trips' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<h2>{{"TRIPS"|trans}}</h2>
		</div>
		<div class="buttons">
			<a href="{{ url_for('trips_edit') }}">
				<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
					{{"ADD"|trans}}</button>
			</a>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<form method="GET" id="tableHeaderFilter" class="search-filter">
				<div class="filter-row">
					<div class="filter-group">
						<div class="filter-element">
							<div class="select-wrapper form-control">
								<select id="filterCrawlerDatasets" name="filter">
									<option value="past_upcoming" {% if filter =="past_upcoming" %} selected {% endif %}>{{"TRIPS_PAST_UPCOMING"|trans}}</option>
									<option value="plan" {% if filter =="plan" %} selected {% endif %}>{{"TRIPS_PLANNED"|trans}}</option>
									<option value="" {% if filter is empty %} selected {% endif %}>{{"TRIPS_ALL"|trans}}</option>
								</select>
							</div>
						</div>
					</div>
				</div>
				<div class="filter-row">
					<div class="filter-element">
						<input type="submit" class="button" value="{{"SHOW"|trans}}"/>
					</div>
				</div>
			</form>
		</div>
	</div>

	<div class="inner-content">
		<div class="page-content">
			<table id="trips_table" class="table table-hover small">
				<thead>
					<tr>
						<th>{{"NAME"|trans}}</th>
						<th>{{"START_DATE"|trans}}</th>
						<th>{{"END_DATE"|trans}}</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for trip in trips %}
						<tr>
							<td>
								<a href="{{ url_for('trips_view', {'trip' : trip.hash}) }}">{{trip.name|raw}}</a>
							</td>
							<td>{{trip.min_date}}</td>
							<td>{{trip.max_date}}</td>
							<td>
								{% if trip.user == user.id %}
									<a href="{{ url_for('trips_edit', {'id' : trip.id}) }}">{{ fontawesome('fas fa-pen-to-square') }}</a>
								{% endif %}
							</td>
							<td>
								{% if trip.user == user.id %}
									<a href="#" data-url="{{ url_for('trips_delete', {'id' : trip.id}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
