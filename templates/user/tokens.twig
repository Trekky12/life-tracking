{% extends "base.twig" %}

{% set active = 'profile' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<h2>{{"LOGIN_TOKENS"|trans}}</h2>
		</div>
		{% if users is not empty %}
			<div class="buttons">
				<a href="{{ url_for('login_tokens_delete_old') }}">
					<button class="button button-outlined">{{ fontawesome('fas fa-trash') }}
						{{"LOGIN_TOKENS_CLEAN"|trans}}</button>
				</a>
			</div>
		{% endif %}
	</div>
{% endblock %}

{% block tabbar %}
	{% if users is not empty %}
		{% include "settings/settings-tabs.twig" with {'active':'login_tokens'} only %}
	{% else %}
		{% include "profile/profile-tabs.twig" with {'active':'users_login_tokens'} only %}
	{% endif %}
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="tokens_table" class="table table-hover small" data-user="{% if users is not empty %}1{% else %}0{% endif %}">
				<thead>
					<tr>
						<th>{{"THIS_DEVICE"|trans}}</th>
						<th>{{"CHANGED_ON"|trans}}</th>
						<th>{{"CREATED_ON"|trans}}</th>
						{% if users is not empty %}
							<th>{{"LOGIN"|trans}}</th>
						{% endif %}
						<th>{{"USER_AGENT"|trans}}</th>
						<th>{{"IP_ADDRESS"|trans}}</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for entry in list %}
						<tr>
							<td>
								{% if user_token == entry.token %}x
								{% endif %}
							</td>
							<td>{{entry.changedOn}}</td>
							<td>{{entry.createdOn}}</td>
							{% if users is not empty %}
								<td>{{users[entry.user].login}}</td>
							{% endif %}
							<td>{{entry.agent}}</td>
							<td>{{entry.ip}}</td>
							<td>
								<a href="#" data-url="{% if users is not empty %}{{ url_for('login_tokens_delete', {'id' : entry.id}) }}{% else %}{{ url_for('users_login_tokens_delete', {'id' : entry.id}) }}{% endif %}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
