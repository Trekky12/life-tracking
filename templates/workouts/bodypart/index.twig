{% extends "base.twig" %}

{% set active = 'workouts' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["WORKOUTS_BODYPARTS"]}}</h2> 
            <div class="buttons">
                <a href="{{  url_for('workouts_bodyparts_edit') }}"><button class="white"><i class="fas fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a>
            </div>
        </div>
        <div class="page-content">
            <table id="workouts_bodyparts_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["NAME"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for bodypart in bodyparts %}
                        <tr>
                            <td>{{bodypart.name|raw}}</td> 
                            <td><a href="{{  url_for('workouts_bodyparts_edit', {'id' : bodypart.id}) }}"><span class="fas fa-edit fa-lg"></span></a></td>
                            <td><a href="#" data-url="{{  url_for('workouts_bodyparts_delete', {'id' : bodypart.id}) }}" class="btn-delete"><span class="fas fa-trash fa-lg"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}