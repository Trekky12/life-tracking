<div class="exercise" data-id="{{ exercise["exercise"].id }}">
    <div class="exercise-content">
        <small class="bodypart">{{ exercise["mainBodyPart"] }} / {{ exercise["mainMuscle"] }}</small>
        <h3 class="title">{{ exercise["exercise"].name }}</h3>
        <div class="instructions">
            <a href="#" class="headline">{{ lang["WORKOUTS_INSTRUCTIONS"] }}</a>
            <p class="content">{{ exercise["exercise"].instructions }}</p>
        </div>
        {% if exercise["primary_muscles"]|length > 0 %}
            <h4>{{lang["WORKOUTS_MUSCLES_PRIMARY"]}}</h4>
            <p>
            {% for muscle in exercise["primary_muscles"] %}
                {{ muscle.name }}{% if not loop.last %}, {% endif %}
            {% endfor %}
            </p>
        {% endif %}

        {% if exercise["secondary_muscles"]|length > 0 %}
            <h4>{{lang["WORKOUTS_MUSCLES_SECONDARY"]}}</h4>
            <p>
            {% for muscle in exercise["secondary_muscles"] %}
                {{ muscle.name }}{% if not loop.last %}, {% endif %}
            {% endfor %}
            </p>
        {% endif %}

        {% if baseMuscleImageThumbnail != '' %}
            <div id="exercise-images">
                <img class="image-base" src="/{{uploads_folder}}/muscles/{{baseMuscleImageThumbnail}}"/>
                {% for muscle in exercise["secondary_muscles"] %}
                    {% if muscle.get_image_secondary() != '' %}
                        <img class="image-overlay" src="/{{uploads_folder}}/muscles/{{muscle.get_image_secondary(true)}}"/>
                    {% endif %}
                {% endfor %}
                {% for muscle in exercise["primary_muscles"] %}
                    {% if muscle.get_image_primary() != '' %}
                        <img class="image-overlay" src="/{{uploads_folder}}/muscles/{{muscle.get_image_primary(true)}}"/>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </div>                                   
    {% if exercise["exercise"].get_thumbnail() != ''%}
        <div class="thumbnail">
            <a href="/{{uploads_folder}}/exercises/{{exercise["exercise"].get_image()}}" target="_blank"><img src="/{{uploads_folder}}/exercises/{{exercise["exercise"].get_thumbnail()}}"/></a>
        </div>
    {% endif %}
</div>