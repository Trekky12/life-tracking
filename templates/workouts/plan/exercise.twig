<div class="exercise {% if is_selected %}selected{% endif %}" data-id="{{ exercise.id }}">
    <div class="icons">
        <i class="plus fas fa-plus {% if is_selected %}hidden{% endif %}"></i>
        <i class="minus fas fa-minus {% if not is_selected %}hidden{% endif %}"></i>
        <i class="handle fas fa-arrows-alt {% if not is_selected %}hidden{% endif %}"></i>
    </div>
    <div class="exercise-content">
        <small class="bodypart">{{ bodyparts[exercise.mainBodyPart].name }} / {{ muscles[exercise.mainMuscle].name }}</small>
        <h3 class="title">{{ exercise.name }}</h3>
        <div class="instructions">
            <a href="#" class="headline">{{ lang["WORKOUTS_INSTRUCTIONS"] }}</a>
            <p class="content">{{ exercise.instructions }}</p>
        </div>
    </div>
    {% if exercise.get_thumbnail() != ''%}
        <div class="thumbnail">
            <img src="/{{uploads_folder}}/exercises/{{exercise.get_thumbnail()}}"/>
        </div>
    {% endif %}
    {% if is_selected %}
        <input type="hidden" name="exercises[{{ idx - 1 }}][id]" value="{{ exercise.id }}"/>
    {% endif %}
</div>