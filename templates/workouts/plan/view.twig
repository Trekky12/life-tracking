{% extends "base.twig" %}

{% set active = 'workouts' %}

{% block style %}

{% endblock %}

{% block javascript %}

{% endblock %}

{% block body %}
    <div class="inner-content">
        <div class="page-header"><h2>{{plan.name|raw}}</h2> </div>
        <div class="page-content">
            <div class="workout-selection view">
                {% for select in selected_exercises %}
                    {% set exercise = exercises[select["exercise"]] %}
                    {% include "workouts/plan/exercise-view.twig" with {'exercise':exercise, 'muscles': muscles, 'bodyparts': bodyparts, 'is_selected': false, 'idx': loop.index, 'sets': select["sets"]} only %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}        
