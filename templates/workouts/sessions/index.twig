{% extends "base.twig" %}

{% set active = 'workouts' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["WORKOUTS_SESSIONS"]}}</h2> <a href="{{  url_for('workouts_sessions_edit', {'plan':plan.hash}) }}"><button class="white"><i class="fas fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a></div>
        <div class="page-content">
            <table id="workouts_sessions_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["NAME"]}}</th>
                        <th>{{ lang["WORKOUTS_DAYS"] }}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for session in sessions %}
                        <tr>
                            <td><a href="{{  url_for('workouts_sessions_view', {'plan':plan.hash, 'id' : session.id}) }}">{{session.date}}</a></td> 
                            <td>{{session.days}}</td> 
                            <td><a href="{{  url_for('workouts_sessions_edit', {'plan':plan.hash, 'id' : session.id}) }}"><span class="fas fa-edit fa-lg"></span></a></td>
                            <td><a href="#" data-url="{{  url_for('workouts_sessions_delete', {'plan':plan.hash, 'id' : session.id}) }}" class="btn-delete"><span class="fas fa-trash fa-lg"></span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}