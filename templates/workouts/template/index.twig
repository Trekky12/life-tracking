{% extends "base.twig" %}

{% set active = 'workouts' %}

{% block body %}

    <div class="inner-content">
        <div class="page-header"><h2>{{lang["WORKOUTS_TEMPLATE_PLANS"]}}</h2> 
            {% if user.isAdmin() %}
                <div class="buttons">
                    <a href="{{  url_for('workouts_templates_edit') }}"><button class="white"><i class="fas fa-plus" aria-hidden="true"></i> {{lang["ADD"]}}</button></a>
                </div>
            {% endif %}
        </div>
        <div class="page-content">
            <table id="workouts_templates_table" class="table table-hover small">
                <thead>
                    <tr>
                        <th>{{lang["NAME"]}}</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for plan in plans %}
                        <tr>
                            <td><a href="{{  url_for('workouts_template_view', {'plan' : plan.hash}) }}">{{plan.name|raw}}</a></td> 
                                {% if user.isAdmin() %}
                                <td><a href="{{  url_for('workouts_templates_edit', {'id' : plan.id}) }}"><span class="fas fa-edit fa-lg"></span></a></td>
                                <td><a href="#" data-url="{{  url_for('workouts_templates_delete', {'id' : plan.id}) }}" class="btn-delete"><span class="fas fa-trash fa-lg"></span></a></td>
                                    {% else %}
                                <td></td>
                                <td></td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}