{% extends "base.twig" %}

{% set active = 'workouts' %}

{% block pageheader %}
	<div class="page-header">
		<div class="page-headline">
			<h2>{{"WORKOUTS_TEMPLATE_PLANS"|trans}}</h2>
		</div>
		{% if user.isAdmin() %}
			<div class="buttons">
				<a href="{{ url_for('workouts_templates_edit') }}">
					<button class="button button-add-item">{{ fontawesome('fas fa-plus') }}
						{{"ADD"|trans}}</button>
				</a>
			</div>
		{% endif %}
	</div>
{% endblock %}

{% block tabbar %}
	{% include "workouts/workouts-tabs.twig" with {'active':'workouts_templates'} %}
{% endblock %}

{% block body %}
	<div class="inner-content">
		<div class="page-content">
			<table id="workouts_templates_table" class="table table-hover small">
				<thead>
					<tr>
						<th>{{"NAME"|trans}}</th>
						<th>{{ "WORKOUTS_DAYS"|trans }}</th>
						<th>{{ "WORKOUTS_EXERCISES"|trans }}</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for plan in plans %}
						<tr>
							<td>
								<a href="{{ url_for('workouts_template_view', {'plan' : plan.hash}) }}">{{plan.name|raw}}</a>
							</td>
							<td>
								{%if plan.days > 0 %}
									{{ plan.days }}
								{% endif %}
							</td>
							<td>
								{%if plan.exercises > 0 %}
									{{ plan.exercises }}
								{% endif %}
							</td>
							{% if user.isAdmin() %}
								<td>
									<a href="{{ url_for('workouts_templates_edit', {'id' : plan.id}) }}">{{ fontawesome('fas fa-pen-to-square') }}</a>
								</td>
								<td>
									<a href="#" data-url="{{ url_for('workouts_templates_delete', {'id' : plan.id}) }}" class="btn-delete">{{ fontawesome('fas fa-trash') }}</a>
								</td>
							{% else %}
								<td></td>
								<td></td>
							{% endif %}
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
